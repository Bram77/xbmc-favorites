<!--
    These are variables for controls to display program details for a selected
    row in a list of programs.

    This assumes that the following varialbes are already defined:

    (show_detail_x)
    (show_detail_y)
    (show_detail_w)
    (show_detail_h)
-->
<show_dt_x>(show_detail_x)+(show_dt_dw)</show_dt_x>
<show_dt_y>(show_detail_y)+(show_dt_dh)</show_dt_y>

<show_dt_col_w>((show_detail_w)-5.0*(dt_dw))/4.0</show_dt_col_w>

<show_dt_title_l_x>(show_dt_x)</show_dt_title_l_x>
<show_dt_title_l_y>(show_dt_y)</show_dt_title_l_y>
<show_dt_title_l_w>(show_dt_col_w)</show_dt_title_l_w>
<show_dt_title_l_h>(show_dt_title_row_h)</show_dt_title_l_h>

<show_dt_title_x>(show_dt_x)+(show_dt_col_w)+(show_dt_dw)</show_dt_title_x>
<show_dt_title_y>(show_dt_y)</show_dt_title_y>
<show_dt_title_w>3*(show_dt_col_w)+2*(show_dt_dw)</show_dt_title_w>
<show_dt_title_h>(show_dt_title_row_h)</show_dt_title_h>

<show_dt_date_l_x>(show_dt_x)</show_dt_date_l_x>
<show_dt_date_l_y>(show_dt_y)+(show_dt_title_row_h)+(show_dt_dh)</show_dt_date_l_y>
<show_dt_date_l_w>(show_dt_col_w)</show_dt_date_l_w>
<show_dt_date_l_h>(show_dt_row_h)</show_dt_date_l_h>

<show_dt_date_x>(show_dt_x)+(show_dt_col_w)+(show_dt_dw)</show_dt_date_x>
<show_dt_date_y>(show_dt_y)+(show_dt_title_row_h)+(show_dt_dh)</show_dt_date_y>
<show_dt_date_w>3*(show_dt_col_w)+2*(show_dt_dw)</show_dt_date_w>
<show_dt_date_h>(show_dt_row_h)</show_dt_date_h>

<show_dt_chan_l_x>(show_dt_x)</show_dt_chan_l_x>
<show_dt_chan_l_y>(show_dt_y)+(show_dt_title_row_h)+2*(show_dt_dh)+(show_dt_row_h)</show_dt_chan_l_y>
<show_dt_chan_l_w>(show_dt_col_w)</show_dt_chan_l_w>
<show_dt_chan_l_h>(show_dt_row_h)</show_dt_chan_l_h>

<show_dt_chan_x>(show_dt_x)+(show_dt_col_w)+(show_dt_dw)</show_dt_chan_x>
<show_dt_chan_y>(show_dt_y)+(show_dt_title_row_h)+2*(show_dt_dh)+(show_dt_row_h)</show_dt_chan_y>
<show_dt_chan_w>(show_dt_col_w)</show_dt_chan_w>
<show_dt_chan_h>(show_dt_row_h)</show_dt_chan_h>

<show_dt_air_l_x>(show_dt_x)+2*(show_dt_col_w)+2*(show_dt_dw)</show_dt_air_l_x>
<show_dt_air_l_y>(show_dt_y)+(show_dt_title_row_h)+2*(show_dt_dh)+(show_dt_row_h)</show_dt_air_l_y>
<show_dt_air_l_w>(show_dt_col_w)</show_dt_air_l_w>
<show_dt_air_l_h>(show_dt_row_h)</show_dt_air_l_h>

<show_dt_air_x>(show_dt_x)+3*(show_dt_col_w)+3*(show_dt_dw)</show_dt_air_x>
<show_dt_air_y>(show_dt_y)+(show_dt_title_row_h)+2*(show_dt_dh)+(show_dt_row_h)</show_dt_air_y>
<show_dt_air_w>(show_dt_col_w)</show_dt_air_w>
<show_dt_air_h>(show_dt_row_h)</show_dt_air_h>

<show_dt_desc_l_x>(show_dt_x)</show_dt_desc_l_x>
<show_dt_desc_l_y>(show_dt_y)+(show_dt_title_row_h)+3*(show_dt_dh)+2*(show_dt_row_h)</show_dt_desc_l_y>
<show_dt_desc_l_w>(show_dt_col_w)</show_dt_desc_l_w>
<show_dt_desc_l_h>(show_dt_row_h)</show_dt_desc_l_h>

<show_dt_desc_x>(show_dt_x)+(show_dt_col_w)+(show_dt_dw)</show_dt_desc_x>
<show_dt_desc_y>(show_dt_y)+(show_dt_title_row_h)+3*(show_dt_dh)+2*(show_dt_row_h)</show_dt_desc_y>
<show_dt_desc_w>3*(show_dt_col_w)+2*(show_dt_dw)</show_dt_desc_w>
<show_dt_desc_h>(show_dt_row_h)</show_dt_desc_h>

<show_dt_cat_l_x>(show_dt_x)</show_dt_cat_l_x>
<show_dt_cat_l_y>(show_dt_y)+(show_dt_title_row_h)+4*(show_dt_dh)+3*(show_dt_row_h)</show_dt_cat_l_y>
<show_dt_cat_l_w>(show_dt_col_w)</show_dt_cat_l_w>
<show_dt_cat_l_h>(show_dt_row_h)</show_dt_cat_l_h>

<show_dt_cat_x>(show_dt_x)+(show_dt_col_w)+(show_dt_dw)</show_dt_cat_x>
<show_dt_cat_y>(show_dt_y)+(show_dt_title_row_h)+4*(show_dt_dh)+3*(show_dt_row_h)</show_dt_cat_y>
<show_dt_cat_w>(show_dt_col_w)</show_dt_cat_w>
<show_dt_cat_h>(show_dt_row_h)</show_dt_cat_h>

<show_dt_expire_l_x>(show_dt_x)</show_dt_expire_l_x>
<show_dt_expire_l_y>(show_dt_y)+(show_dt_title_row_h)+5*(show_dt_dh)+4*(show_dt_row_h)</show_dt_expire_l_y>
<show_dt_expire_l_w>(show_dt_col_w)</show_dt_expire_l_w>
<show_dt_expire_l_h>(show_dt_row_h)</show_dt_expire_l_h>

<show_dt_expire_x>(show_dt_x)+(show_dt_col_w)+(show_dt_dw)</show_dt_expire_x>
<show_dt_expire_y>(show_dt_y)+(show_dt_title_row_h)+5*(show_dt_dh)+4*(show_dt_row_h)</show_dt_expire_y>
<show_dt_expire_w>(show_dt_col_w)</show_dt_expire_w>
<show_dt_expire_h>(show_dt_row_h)</show_dt_expire_h>

<show_dt_size_l_x>(show_dt_x)</show_dt_size_l_x>
<show_dt_size_l_y>(show_dt_y)+(show_dt_title_row_h)+6*(show_dt_dh)+5*(show_dt_row_h)</show_dt_size_l_y>
<show_dt_size_l_w>(show_dt_col_w)</show_dt_size_l_w>
<show_dt_size_l_h>(show_dt_row_h)</show_dt_size_l_h>

<show_dt_size_x>(show_dt_x)+(show_dt_col_w)+(show_dt_dw)</show_dt_size_x>
<show_dt_size_y>(show_dt_y)+(show_dt_title_row_h)+6*(show_dt_dh)+5*(show_dt_row_h)</show_dt_size_y>
<show_dt_size_w>(show_dt_col_w)</show_dt_size_w>
<show_dt_size_h>(show_dt_row_h)</show_dt_size_h>

<screenshot_x>(show_dt_x)+2*(show_dt_col_w)+2*(show_dt_dw)</screenshot_x>
<screenshot_y>(show_dt_y)+(show_dt_title_row_h)+4*(show_dt_dh)+3*(show_dt_row_h)</screenshot_y>
<screenshot_w>(show_detail_w)-4*(show_dt_dw)-2*(show_dt_col_w)</screenshot_w>
<screenshot_h>(show_detail_h)-5*(show_dt_dh)-4*(show_dt_row_h)-(show_dt_title_row_h)</screenshot_h>


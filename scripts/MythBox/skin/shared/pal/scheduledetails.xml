<window>
    <id>3</id>
    <defaultgroup>main</defaultgroup>

#include vars.xml

    <detail_x>(data_up_x)</detail_x>
    <detail_y>(data_up_y)</detail_y>
    <detail_w>(data_w)</detail_w>
    <detail_h>(data_h)</detail_h>

    <row_data_h>30.0/720.0*(height)</row_data_h>
    <row_dh>15.0/720.0*(height)</row_dh>
    <row_h>(row_data_h)+(row_dh)</row_h>
    <col_dw>5.0/1280.0*(width)</col_dw>
    <col_w>(detail_w)/6</col_w>
    <col1_data_w>(col_w)-(col_dw)</col1_data_w>
    <col2_data_w>2*(col_w)-(col_dw)</col2_data_w>
    <col3_data_w>(col_w)-(col_dw)</col3_data_w>
    <col4_data_w>2*(col_w)-(col_dw)</col4_data_w>
    <col1_x>(detail_x)+0*(col_w)</col1_x>
    <col2_x>(detail_x)+1*(col_w)</col2_x>
    <col3_x>(detail_x)+3*(col_w)</col3_x>
    <col4_x>(detail_x)+4*(col_w)</col4_x>

    <channel_x>(col1_x)</channel_x>
    <channel_y>(detail_y)+0*(row_h)</channel_y>
    <channel_w>(row_data_h)*2</channel_w>
    <channel_h>(row_data_h)*2</channel_h>

    <controls>
#include bgctls.xml
#include titlectls.xml
        <control>
#include titleattrs.xml
            <id>window_title</id>
            <label>121</label>
        </control>

        <!-- menu buttons -->
        <control>
            <description>Refresh button</description>

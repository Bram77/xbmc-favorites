<window id="2004">
	
<defaultcontrol>2</defaultcontrol>
<visible>!Skin.HasSetting(music-info2)</visible>
<animation effect="slide" end="0,0" delay="30000" time="300">WindowOpen</animation>
<visible>[Player.HasAudio + Window.IsActive(PlayerControls) + !Window.IsActive(FullscreenVideo) + !Window.IsActive(visualisation)] | !Window.IsActive(Home) + !Window.IsActive(2007) + [Player.HasAudio + !Window.IsActive(PlayerControls) + !Window.IsActive(FullscreenVideo) + !Window.IsActive(visualisation) + System.IdleTime(30)] | !Window.IsActive(Home)  + !Window.IsActive(2007) + [Player.HasAudio + Window.IsActive(PlayerControls) + !Window.IsActive(FullscreenVideo) + !Window.IsActive(visualisation) + System.IdleTime(30)]</visible>
	
	
<controls>
<controlgroup>
	<control type="image">
		<description>Background</description>
		<posx>-10</posx>
		<posy>0</posy>
		<width>740</width>
		<height>576</height>
		<texture>Blacknwhite.png</texture>
		</control>

	<control type="label">
		<description>dialog Heading</description>
		<posx>0</posx>
		<posy>35</posy>
		<width>720</width>
		<height>16</height>
		<align>center</align>
		<label>13350</label>
		<font>special16</font>
		</control>

	
	<!--Music Content-->

	<control type="image">
		<description>Case bg Image</description>
		<posx>30</posx>
		<posy>104</posy>
		<width>350</width>
		<height>342</height>
		<texture>case1.png</texture>
		</control>	

	<control type="image">
		<description>Cover Image</description>
		<posx>72</posx>
		<posy>122</posy>
		<width>292</width>
		<height>309</height>
		<info>MusicPlayer.Cover</info>
	</control>

	<control type="image">
		<description>Cover Image rounds overlay</description>
		<posx>38</posx>
		<posy>106</posy>
		<width>286</width>
		<height>336</height>
		<texture>case2.png</texture>
		</control>



<!--Reflection-->

	<control type="image">
   		<description>Cover reflection</description>
   		<posx>72</posx>
   		<posy>440</posy>
   		<width>292</width>
   		<height>309</height>
   		<texture flipy="true" diffuse="Thumb_Mask.png" /> 
   		<info>MusicPlayer.Cover</info>
		</control> 

	<control type="image">
		<description>Case bg Image reflection</description>
		<posx>30</posx>
		<posy>423</posy>
		<width>350</width>
		<height>342</height>
		<texture flipy="true" diffuse="Thumb_Mask.png">case1.png</texture>
		</control>	

	

<control type="image">
		<description>TextBox</description>
		<posx>730</posx>
		<posy>165</posy>
		<width>320</width>
		<height>250</height>
		<texture></texture>
		 <animation effect="slide" end="-345,0" delay="100" time="300">WindowOpen</animation>
		</control>	


<!-- Text info -->

	<control type="label">
		<description>Artist</description>
		<posx>730</posx>
		<posy>195</posy>
		<width>285</width>
		<font>special14</font>
		<label>$INFO[MusicPlayer.Artist]</label>
		<scroll>true</scroll>
		<animation effect="slide" end="-330,0" delay="100" time="300">WindowOpen</animation>
		</control>

	
	<control type="label">
		<description>Title</description>
		<posx>730</posx>
		<posy>235</posy>
		<width>285</width>
		<font>font04</font>
		<label>$INFO[MusicPlayer.Title]</label>
		<scroll>true</scroll>
		<animation effect="slide" end="-330,0" delay="100" time="300">WindowOpen</animation>
		</control>

	
	<control type="label">
		<description>Album</description>
		<posx>730</posx>
		<posy>255</posy>
		<width>285</width>
		<font>font04</font>
		<label>$INFO[MusicPlayer.Album]</label>
		<scroll>true</scroll>
        <animation effect="slide" end="-330,0" delay="100" time="300">WindowOpen</animation>
		</control>


	<control type="label">
		<description>Year</description>
		<posx>730</posx>
		<posy>275</posy>
		<width>270</width>
		<font>font04</font>
		<label>$LOCALIZE[562]:  $INFO[MusicPlayer.Year]</label>
		<scroll>true</scroll>
		<animation effect="slide" end="-330,0" delay="100" time="300">WindowOpen</animation>
		</control>


	<control type="label">
		<description>Play Time</description>
		<posx>560</posx>
		<posy>534</posy>
		<font>font04</font>
		<label>$LOCALIZE[142] $INFO[MusicPlayer.Time]  / $INFO[Player.TimeRemaining]</label>
		</control>



	<control type="label">
		<description>Duration</description>
		<posx>730</posx>
		<posy>295</posy>
		<font>font04</font>
		<label>$LOCALIZE[180]:  $INFO[MusicPlayer.Duration]</label>
		<scroll>true</scroll>
		<animation effect="slide" end="-330,0" delay="100" time="300">WindowOpen</animation>
		</control>

	
	<control type="label">
		<description>Track Number</description>
		<posx>730</posx>
		<posy>315</posy>
		<font>font04</font>
		<label>$INFO[musicplayer.Playlistposition,$LOCALIZE[182]: ]$INFO[musicplayer.Playlistlength, / ]</label>
		<scroll>true</scroll>
		<animation effect="slide" end="-330,0" delay="100" time="300">WindowOpen</animation>
		</control>

	<control type="label">
		<description>BitRate</description>
		<posx>730</posx>
		<posy>335</posy>
		<font>font04</font>
		<label>BitRate:  $INFO[MusicPlayer.BitRate] kbit</label>
		<scroll>true</scroll>
		<animation effect="slide" end="-330,0" delay="100" time="300">WindowOpen</animation>
		</control>

<control type="image">
		<description>Rating</description>
		<posx>730</posx>
		<posy>360</posy>
		<font>font04</font>
		<info>ListItem.Rating</info>
		<animation effect="slide" end="-360,0" delay="100" time="300">WindowOpen</animation>
		</control>



	<control type="progress">
		<description>Progressbar</description>
		<posx>0</posx>
		<posy>565</posy>
		<width>720</width>
		<height>10</height>
		<info>Player.Progress</info>
		<lefttexture></lefttexture>
		<midtexture>progress_mid-blue.png</midtexture>
		<righttexture></righttexture>
		<overlaytexture>-</overlaytexture>
	</control>


</controlgroup>



	</controls>
</window>
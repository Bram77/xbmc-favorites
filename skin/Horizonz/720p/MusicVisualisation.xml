			<width>300</width>
			<label>Track:</label>
			<include>scraperimdbtitle</include>
		</control>
		
		<control type="label">
			<posx>400</posx>
			<posy>125</posy>
			<width>280</width>
			<include>scraperimdb</include>
			<label>$INFO[MusicPlayer.TrackNumber] - $INFO[MusicPlayer.Title]</label>
			<scroll>true</scroll>
		</control>
		
						<control type="label">
			<posx>380</posx>
			<posy>150</posy>
			<width>300</width>
			<label>Album:</label>
			<include>scraperimdbtitle</include>
		</control>
		
		<control type="label">
			<posx>400</posx>
			<posy>175</posy>
			<width>280</width>
			<include>scraperimdb</include>
			<label>$INFO[MusicPlayer.Album]</label>
			<scroll>true</scroll>
		</control>
		
		
										<control type="label">
			<posx>380</posx>
			<posy>200</posy>
			<width>300</width>
			<label>Year:</label>
			<include>scraperimdbtitle</include>
		</control>
		
		<control type="label">
			<posx>400</posx>
			<posy>225</posy>
			<width>280</width>
			<include>scraperimdb</include>
			<label>$INFO[MusicPlayer.Year]</label>
		</control>
		
												<control type="label">
			<posx>380</posx>
			<posy>250</posy>
			<width>300</width>
			<label>Genre:</label>
			<include>scraperimdbtitle</include>
		</control>
		
		<control type="label">
			<posx>400</posx>
			<posy>275</posy>
			<width>280</width>
			<include>scraperimdb</include>
			<label>$INFO[MusicPlayer.Genre]</label>
		</control>
		
		
		
		<control type="label">
			<posx>680</posx>
			<posy>305</posy>
			<align>right</align>
			<label>$INFO[MusicPlayer.Time] / $INFO[MusicPlayer.Duration]</label>
			<include>scraperimdb</include>
			<visible>!Player.Paused</visible>
		</control>
		
		<control type="label">
			<posx>680</posx>
			<posy>305</posy>
			<align>right</align>
			<label>$INFO[MusicPlayer.Time] (Paused)</label>
			<include>scraperimdb</include>
			<visible>Player.Paused</visible>
		</control>
		
		<control type="progress">
				<description>Progressbar</description>
				<posx>48</posx>
				<posy>335</posy>
				<width>625</width>
				<height>8</height>
				<info>Player.Progress</info>
				<texturebg>progress-back.png</texturebg>
				<lefttexture>progress-left.png</lefttexture>
				<midtexture>progress-mid.png</midtexture>
				<righttexture>progress-right.png</righttexture>
				<overlaytexture>-</overlaytexture>
				<visible>true</visible>
			</control>
		
		</control>
	
	</control>
	</controls>

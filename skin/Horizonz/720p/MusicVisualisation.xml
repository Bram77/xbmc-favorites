			<posx>0</posx>
			<posy>0</posy>
			<height>400</height>
			<width>720</width>
			<texture>vispanel.png</texture>
		</control>		
		
		<control type="image">
			<posx>84</posx>
			<posy>50</posy>
			<height>243</height>
			<width>240</width>
			<info>MusicPlayer.Cover</info>
			<visible>Player.HasAudio</visible>
		</control>

		<control type="image">
			<posx>43</posx>
			<posy>35</posy>
			<height>276</height>
			<width>296</width>
			<texture>case2.png</texture>
			<visible>Player.HasAudio</visible>
		</control>
		
		<control type="image">
			<description>Panel</description>
			<posx>84</posx>
			<posy>305</posy>
			<height>241</height>
			<width>239</width>
			<colordiffuse>afFFFFFF</colordiffuse>
   		    <texture flipy="true" diffuse="Thumb_Mask5.png">$INFO[MusicPlayer.Cover]</texture>
		</control>
		
		<control type="image">
			<description>Panel</description>
			<posx>43</posx>
			<posy>288</posy>

			<include>scraperimdbtitle</include>
		</control>
		
		<control type="label">
			<posx>400</posx>
			<posy>75</posy>
			<width>280</width>
			<include>scraperimdb</include>
			<label>$INFO[MusicPlayer.Artist]</label>
			<scroll>true</scroll>
		</control>
		
				<control type="label">
			<posx>380</posx>

<window id="2004">
<defaultcontrol>2</defaultcontrol>

<controls>
		<control type="visualisation">
			<posx>675</posx>
			<posy>60</posy>
			<width>590</width>
			<height>480</height>
			<visible>Window.IsVisible(0)</visible>
			<include>DefaultFadeAnimation</include>
		</control>

		<control type="visualisation">
			<posx>0</posx>
			<posy>0</posy>
			<width>1280</width>
			<height>720</height>
			<visible>Window.IsVisible(2006)</visible>
			<include>DefaultFadeAnimation</include>
		</control>

		<control type="group">
			<posx>0</posx>
			<posy>550</posy>
			<include>MediaOverlay</include>
			<include>DefaultFadeAnimation</include>
			<control type="image" id="0">
				<description>album cover</description>
				<posx>40</posx>
				<posy>5</posy>
				<width>90</width>
				<height>90</height>
				<texture>DefaultAlbumCover.png</texture>
				<info>MusicPlayer.Cover</info>
				<aspectratio>stretch</aspectratio>
			</control>
			<control type="label" id="0">
				<description>album</description>
				<posx>140</posx>
				<posy>10</posy>
				<width>690</width>
				<height>20</height>
				<align>left</align>
				<label>[UPPERCASE]$INFO[MusicPlayer.Album][/UPPERCASE] [COLOR DialogText]$INFO[MusicPlayer.Year, (,)][/COLOR]</label>
				<scroll>true</scroll>
				<font>DialogTextFont</font>
				<textcolor>DialogFocusText</textcolor>
			</control>
			<control type="label" id="0">
				<description>artist</description>
				<posx>140</posx>
				<posy>30</posy>
				<width>690</width>
				<height>20</height>
				<align>left</align>
				<label>$INFO[MusicPlayer.Artist]</label>
				<scroll>true</scroll>
				<font>DialogTextFont</font>
				<textcolor>DialogText</textcolor>
			</control>
			<control type="label" id="0">
				<description>track title</description>
				<posx>140</posx>
				<posy>50</posy>
				<width>690</width>
				<height>20</height>
				<align>left</align>
				<label>$INFO[MusicPlayer.Title]</label>
				<scroll>true</scroll>
				<font>DialogTextFont</font>
				<textcolor>DialogText</textcolor>
			</control>
			<control type="progress" id="1">
				<description>Progressbar</description>
				<posx>135</posx>
				<posy>70</posy>
				<width>590</width>
				<height>25</height>
				<info>Player.Progress</info>
				<texturebg>ProgressBack.png</texturebg>
				<lefttexture>ProgressLeft.png</lefttexture>
				<midtexture>ProgressMid.png</midtexture>
				<righttexture>ProgressRight.png</righttexture>
				<overlaytexture>-</overlaytexture>
			</control>
			<control type="label" id="0">
				<description>time label</description>
				<posx>830</posx>
				<posy>70</posy>
				<label>$INFO[MusicPlayer.Time]$INFO[MusicPlayer.Duration, / ]</label>
				<align>right</align>
				<font>DialogTextFont</font>
				<textcolor>DialogFocusText</textcolor>
				<scroll>false</scroll>
			</control>
		</control>

  </controls>
	
</window>

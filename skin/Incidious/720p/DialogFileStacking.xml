<window id="2008">
<defaultcontrol>450</defaultcontrol>
<allowoverlay>no</allowoverlay>
	
<controls>

<include>BackgroundOverlay</include>
<include>DialogLargeBack</include>

	<control type="list" id="450">
			<posx>10</posx>
			<posy>35</posy>
			<width>580</width>
			<height>100</height>
			<onleft>275</onleft>
			<onright>450</onright>
			<onup>450</onup>
			<ondown>450</ondown>
			<orientation>horizontal</orientation>
			<focusposition>2</focusposition>
			<viewtype label="535">list</viewtype>
			<scrolltime>200</scrolltime>
			<include>DefaultFadeAnimation</include>
		<itemlayout height="40">
					<control type="image">
						<posx>0</posx>
						<posy>0</posy>
						<width>40</width>
						<height>40</height>
						<info>ListItem.Icon</info>
						<aspectratio>keep</aspectratio>
					</control>
				</itemlayout>
			<focusedlayout width="40">
				<control type="image">
					<posx>0</posx>
					<posy>0</posy>
					<width>40</width>
					<height>40</height>
					<info>ListItem.Icon</info>
					<animation effect="zoom" end="0,0,20,20" time="150">focus</animation>
				</control>
				<control type="label">
					<posx>50</posx>
					<posy>0</posy>
					<width>430</width>
					<height>25</height>
					<align>left</align>
					<aligny>center</aligny>
					<info>ListItem.Label</info>
					<font>DialogTextFont</font>
					<textcolor>DialogText</textcolor>
					<selectedcolor>DialogText</selectedcolor>
				</control>
			</focusedlayout>
		</control>
	
	<control type="label">
			<posx>680</posx>
			<posy>25</posy>
			<height>22</height>
			<font>font13</font>
			<align>right</align>
			<info>ListItem.Label</info>
		<include>DefaultFadeAnimation</include>
		</control>
	
</controls>
</window>
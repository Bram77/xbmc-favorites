<window id="502">
	<defaultcontrol>50</defaultcontrol>
	<allowoverlay>no</allowoverlay>
	<controls>
		<control type="label">
			<include>file_name</include>
			<include>2047</include>
		</control>
		<control type="image">
			<description>background image</description>
			<posx>0</posx>
			<posy>0</posy>
			<width>1280</width>
			<height>720</height>
			<texture>background.png</texture>
			<aspectratio>keep</aspectratio>
    			<colordiffuse>-</colordiffuse>
		</control>
		<control type="multiimage">
			<description>Music Context Background multimage</description>
			<posx>320</posx>
			<posy>0</posy>
			<width>960</width>
			<height>540</height>
			<imagepath>music-bg</imagepath>
			<info>skin.string(music)</info>
			<timeperimage>20000</timeperimage>
			<fadetime>2000</fadetime>
      		<randomize>true</randomize>
			<visible>!Player.HasMedia</visible>
			<aspectratio align="bottom">keep</aspectratio>
			<include>backgroundfade</include>
		</control>
		<control type="visualisation">
			<width>1280</width>
			<height>720</height>
			<visible>Player.HasAudio</visible>
			<animation effect="fade" time="250">VisibleChange</animation>
		</control>
		<control type="videowindow">
			<description>video preview window</description>
			<posx>230</posx>
			<posy>0</posy>
			<width>1050</width>
			<height>590</height>
			<visible>Player.HasVideo</visible>
			<animation effect="fade" time="250">VisibleChange</animation>
		</control>
		<control type="image">
			<description>background image overlay</description>
			<posx>0</posx>
			<posy>0</posy>
			<width>1280</width>
			<height>720</height>
			<texture>backgroundoverlayright.png</texture>
    			<colordiffuse>-</colordiffuse>
			<aspectratio>keep</aspectratio>
		</control>
		<control type="label">
			<description>Music Label</description>
			<posx>25</posx>
			<posy>90</posy>
			<width>400</width>
			<height>80</height>
			<label>MUSIC</label>
			<align>Left</align>
			<font>large</font>
			<textcolor>fadetext</textcolor>
			<visible>![system.IdleTime(4) + control.hasfocus(52)] + control.IsVisible(52) | control.IsVisible(50)</visible>
			<animation effect="fade" time="250">VisibleChange</animation>
		</control>
		<include>list</include>
		<include>music_album_view</include>
		<control type="grouplist" id="9000">
			<posx>900</posx>
			<posy>200</posy>
			<width>240</width>
			<height>500</height>
			<itemgap>5</itemgap>
			<onup>9000</onup>
			<ondown>9000</ondown>
			<onright>50</onright>
			<onleft>50</onleft>
			<visible allowhiddenfocus="true">controlGroup(9000).HasFocus(0)</visible>
			<orientation>vertical</orientation>
			<control type="button" id="2">
				<description>view</description>
				<label>100</label>
				<textcolor>normal</textcolor>
			</control>
			<control type="button" id="3">
				<description>sort</description>
				<label>103</label>
				<textcolor>normal</textcolor>
				<width>120</width>
			</control>
			<control type="togglebutton" id="4">
				<description>ascending</description>
				<label>-</label>
			</control>
			<control type="button" id="99">
				<description>library</description>
				<label>744</label>
				<textcolor>normal</textcolor>
				<onclick>ReplaceWindow(mymusicfiles)</onclick>
				<onclick>SetFocus(99)</onclick>
				<selected>Window.IsVisible(mymusiclibrary)</selected>
			</control>
			<control type="button" id="8">
				<description>search</description>
				<label>137</label>
				<textcolor>normal</textcolor>
			</control>
			<control type="radiobutton" id="19">
				<description>filter</description>
				<label>587</label>
				<textcolor>normal</textcolor>
			</control>
			<control type="radiobutton" id="16">
				<description>party_mode</description>
				<label>589</label>
				<textcolor>normal</textcolor>
			</control>
		</control>
		<control type="image">
			<description>background image</description>
			<posx>0</posx>
			<posy>0</posy>
			<width>1280</width>
			<height>720</height>
			<texture>background.png</texture>
			<aspectratio>keep</aspectratio>
    			<colordiffuse>-</colordiffuse>
        		<animation effect="fade" time="200" start="100" end="0">WindowOpen</animation>
        	 	<animation effect="fade" time="200" start="0" end="100">WindowClose</animation>
		</control>
	</controls>
</window>
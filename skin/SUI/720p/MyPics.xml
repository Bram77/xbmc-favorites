<window id="2">
	<defaultcontrol>50</defaultcontrol>
	<allowoverlay>yes</allowoverlay>
	<controls>
		<control type="image">
			<description>background image</description>
			<posx>0</posx>
			<posy>0</posy>
			<width>1280</width>
			<height>720</height>
			<texture>background.png</texture>
			<aspectratio>keep</aspectratio>
		</control>
		<control type="visualisation">
			<posx>230</posx>
			<posy>0</posy>
			<width>1050</width>
			<height>720</height>
			<visible>Player.HasAudio</visible>
			<animation effect="fade" time="250">VisibleChange</animation>
		</control>
		<control type="videowindow">
			<description>video preview window</description>
			<posx>230</posx>
			<posy>0</posy>
			<width>1050</width>
			<height>590</height>
			<visible>Player.HasVideo</visible>
			<animation effect="fade" time="250">VisibleChange</animation>
		</control>
		<control type="multiimage">
			<description>Pictures Context Background multimage</description>
			<posx>320</posx>
			<posy>0</posy>
			<width>960</width>
			<height>540</height>
			<imagepath>pictures-bg</imagepath>
			<timeperimage>20000</timeperimage>
			<fadetime>2000</fadetime>
      		<randomize>true</randomize>
			<visible>!Player.HasMedia</visible>
			<aspectratio align="bottom">keep</aspectratio>
			<include>backgroundfade</include>
		</control>
		<control type="image">
			<description>background image overlay</description>
			<posx>0</posx>
			<posy>0</posy>
			<width>1280</width>
			<height>720</height>
			<texture>backgroundoverlayright.png</texture>
			<aspectratio>keep</aspectratio>
		</control>
		<include>list</include>
		<control type="label">
			<description>Pictures Label</description>
			<posx>25</posx>
			<posy>90</posy>
			<width>600</width>
			<height>80</height>
			<label>Pictures</label>
			<align>Left</align>
			<font>large</font>
			<textcolor>fadetext</textcolor>
			<animation effect="fade" time="250" delay="250">VisibleChange</animation>
			<visible>![container.content(movies) |container.content(tvshows) | container.content(episodes) | container.content(seasons)]</visible>
		</control>
		<control type="grouplist" id="9000">
			<posx>0</posx>
			<posy>545</posy>
			<width>720</width>
			<height>40</height>
			<itemgap>5</itemgap>
			<onup>50</onup>
			<ondown>50</ondown>
			<visible allowhiddenfocus="true">controlgroup(9000).hasfocus(0)</visible>
			<orientation>horizontal</orientation>
			<control type="button" id="2">
				<description>view</description>
				<label>100</label>
				<textcolor>normal</textcolor>
			</control>
			<control type="button" id="3">
				<description>sort</description>
				<label>103</label>
				<textcolor>normal</textcolor>
				<width>100</width>
			</control>
			<control type="togglebutton" id="4">
				<description>ascending</description>
				<label>-</label>
			</control>
			<control type="button" id="6">
				<description>slide_show</description>
				<label>108</label>
				<textcolor>normal</textcolor>
			</control>
			<control type="button" id="7">
				<description>recursive_slideshow</description>
				<label>361</label>
				<textcolor>normal</textcolor>
			</control>
			<control type="radiobutton" id="9">
				<description>randomize</description>
				<label>13319</label>
				<textcolor>normal</textcolor>
			</control>
		</control>
		<control type="image">
			<description>background image</description>
			<posx>0</posx>
			<posy>0</posy>
			<width>1280</width>
			<height>720</height>
			<texture>background.png</texture>
			<aspectratio>keep</aspectratio>
        		<animation effect="fade" time="200" start="100" end="0">WindowOpen</animation>
        	 	<animation effect="fade" time="200" start="0" end="100">WindowClose</animation>
		</control>
	</controls>
</window>
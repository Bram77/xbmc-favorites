<window id="2004">
	<defaultcontrol>2</defaultcontrol>
	<controls>
		<control type="image" id="0">
			<description>Video Cover art</description>
			<posx>100</posx>
			<posy>160</posy>
			<width>300</width>
			<height>400</height>
			<texture>defaultvideocover.png</texture>
			<info>VideoPlayer.Cover</info>
			<aspectratio aligny="bottom">keep</aspectratio>
			<animation type="WindowOpen">
  				<effect type="fade" start="0" end="100" time="800"/>
  				<effect type="slide" start="-300" easing="out" time="200"/>
			</animation>

		</control>
		<control type="image" id="0">
			<description>Video Cover reflection</description>
			<posx>100</posx>
			<posy>560</posy>
			<width>300</width>
			<height>400</height>
			<colordiffuse>d0FFFFFF</colordiffuse>
			<texture flipy="true" diffuse="album-diffuse.png">defaultvideocover.png</texture>
			<info>VideoPlayer.Cover</info>
			<aspectratio aligny="top">keep</aspectratio>
			<animation type="WindowOpen">
  				<effect type="fade" start="0" end="100" time="800"/>
  				<effect type="slide" start="-300" easing="out" time="200"/>
			</animation>

		</control>
		<control type="label" id="0">
			<description>video_info</description>
			<width>400</width>
			<posx>410</posx>
			<posy>470</posy>
			<font>info</font>
			<visible>VideoPlayer.Content(movies)</visible>
			<textcolor>normal</textcolor>
			<align>left</align>
			<label>[LOWERCASE]Now Playing:[CR]$INFO[VideoPlayer.Title] [CR]$INFO[VideoPlayer.Genre][/LOWERCASE]</label>
			<scroll>false</scroll>
			<animation type="WindowOpen">
  				<effect type="fade" start="0" end="100" time="800"/>
  				<effect type="slide" start="-300" easing="out" time="200"/>
			</animation>

		</control>
		<control type="label" id="0">
			<description>episode_info</description>
			<width>400</width>
			<posx>410</posx>
			<posy>460</posy>
			<font>info</font>
			<visible>VideoPlayer.Content(episodes)</visible>
			<textcolor>normal</textcolor>
			<align>left</align>
			<label>[LOWERCASE]Now Playing:[CR]$INFO[VideoPlayer.TVShowTitle][CR]Season $INFO[VideoPlayer.Season] , Episode $INFO[VideoPlayer.Episode][CR]$INFO[VideoPlayer.Title][/LOWERCASE]</label>
			<scroll>false</scroll>
			<animation type="WindowOpen">
  				<effect type="fade" start="0" end="100" time="800"/>
  				<effect type="slide" start="-300" easing="out" time="200"/>
			</animation>
		</control>
	</controls>
</window>
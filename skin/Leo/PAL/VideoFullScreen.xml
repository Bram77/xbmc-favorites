<window id="2005">
	<defaultcontrol>13</defaultcontrol>
	<visible>!Window.IsActive(2004)</visible>
	<allowoverlay>no</allowoverlay>
	<controls>

	<!-- Codec Infos -->
	<control>
		<description>Media Info Background Image</description>
		<type>image</type>
		<id>0</id>
		<posx>-10</posx>
		<posy>0</posy>
		<width>740</width>
		<height>90</height>
		<texture>background2.png</texture>
		<include>media-infopanel-effect</include>
	</control>

	<control>
		<description>Row 1 Label</description>
		<type>label</type>
		<id>10</id>
		<posx>70</posx>
		<posy>10</posy>
		<label>-</label>
		<align>left</align>
		<font>font12</font>
		<include>media-infopanel-effect</include>
	</control>

	<control>
		<description>Row 2 Label</description>
		<type>label</type>
		<id>11</id>
		<posx>70</posx>
		<posy>35</posy>
		<label>-</label>
		<align>left</align>
		<font>font12</font>
		<include>media-infopanel-effect</include>
	</control>

	<control>
		<description>Row 3 Label</description>
		<type>label</type>
		<id>12</id>
		<posx>70</posx>
		<posy>60</posy>
		<label>-</label>
		<align>left</align>
		<font>font12</font>
		<include>media-infopanel-effect</include>
	</control>

	<control>
		<description>buffering label</description>
		<type>label</type>
		<id>24</id>
		<posx>210</posx>
		<posy>520</posy>
		<label>15107</label>
		<width>291</width>
		<align>center</align>
		<font>font12</font>
		<include>textcolorwhite</include>
	</control>

	<!-- Media Infos -->
	
	<control type="group" id="1">
	<posx>-720</posx>
	<animation effect="slide" end="720,0" delay="50" time="300" condition="Player.ShowInfo">Conditional</animation>
	
		
	<control>
		<description>Media Info Background Image</description>
		<type>image</type>
		<id>1</id>
		<posx>0</posx>
		<posy>456</posy>
		<width>360</width>
		<height>120</height>
		<texture>film1.png</texture>
		
		<visible>Player.ShowInfo</visible>
	</control>


	<control>
		<description>Media Info Background Image</description>
		<type>image</type>
		<id>1</id>
		<posx>360</posx>
		<posy>456</posy>
		<width>360</width>
		<height>120</height>
		<texture>film1.png</texture>
		
		<visible>Player.ShowInfo</visible>
	</control>

	<control>
		<description>Cover Image</description>
		<type>image</type>
		<id>1</id>
		<posx>15</posx>
		<posy>472</posy>
		<width>100</width>
		<height>88</height>
		<info>VideoPlayer.Cover</info>
		<aspectratio>keep</aspectratio>
		<include>media-infopanel-effect</include>
		<visible>Player.ShowInfo + Player.HasMedia</visible>
	</control>

	<control>
		<description>Title Label</description>
		<type>label</type>
		<id>1</id>
		<width>400</width>
		<posx>120</posx>
		<posy>479</posy>
		<info>VideoPlayer.Title</info>
		<align>left</align>
		<font>special12</font>
		<include>media-infopanel-effect</include>
		<visible>Player.ShowInfo + Player.HasMedia</visible>
	</control>

	<control>
		<description>Video Director/Year Label</description>
		<type>label</type>
		<id>1</id>
		<width>430</width>
		<posx>120</posx>
		<posy>510</posy>
		<label>$INFO[VideoPlayer.Director] | $INFO[VideoPlayer.Year]</label>
		<font>special13</font>
		<align>left</align>
		<include>media-infopanel-effect</include>
		<visible>Player.ShowInfo + Player.HasMedia</visible>
	</control>

	<control>
		<description>Genre Label</description>
		<type>label</type>
		<id>1</id>
		<width>430</width>
		<posx>120</posx>
		<posy>545</posy>
		<label>$INFO[VideoPlayer.Genre]</label>
		<align>left</align>
		<font>font10</font>
		<include>media-infopanel-effect</include>
		<visible>Player.ShowInfo + Player.HasMedia</visible>
	</control>

	<control>
		<description>Time Info Label</description>
		<type>label</type>
		<id>1</id>
		<width>430</width>
		<posx>545</posx>
		<posy>535</posy>
		<label>$INFO[VideoPlayer.Time] / $INFO[VideoPlayer.Duration]</label>
		<align>left</align>
		<font>special13</font>
		<include>media-infopanel-effect</include>
		<visible>Player.ShowInfo + Player.HasMedia</visible>
	</control>

	

	


	

	</control>

	</controls>
</window>


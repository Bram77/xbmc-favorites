<window>
  <id>20</id>
  <defaultcontrol>2</defaultcontrol>
  <allowoverlay>yes</allowoverlay>
  <controls>
    <include>background</include>

    <control>
      <description>files logo</description>
      <type>image</type>
      <id>1</id>
      <posx>55</posx>
      <posy>41</posy>
      <height>72</height>
      <texture>background-myscripts.png</texture>
    </control>

    <control>
      <description>number of files text label</description>
      <type>label</type>
      <id>12</id>
      <posx>210</posx>
      <posy>525</posy>
      <label>-</label>
      <font>font13</font>
      <textcolor>FFB2D4F5</textcolor>
    </control>

    <control>
      <description>Scripts text label</description>
      <type>label</type>
      <id>1</id>
      <align>right</align> 
      <posx>660</posx> 
      <posy>85</posy>
      <label>247</label>
      <font>font04</font>
      <textcolor>FFB2D4F5</textcolor>
    </control>

    <controlgroup>
      <control>
        <description>View As Icons button</description>
        <type>button</type>
        <id>2</id>
        <posx>60</posx>
        <posy>120</posy>
        <label>100</label>
        <onleft>50</onleft>
        <onright>50</onright>
        <onup>3</onup>
        <ondown>3</ondown>
      </control>

      <control>
        <description>Sort by button</description>
        <type>button</type>
        <id>3</id>
        <posx>60</posx>
        <posy>157</posy>
        <label>103</label>
        <onleft>50</onleft>
        <onright>4</onright>
        <onup>2</onup>
        <ondown>2</ondown>
      </control>

      <control>
        <description>Sort asc</description>
        <type>togglebutton</type>
        <id>4</id>
        <label>-</label>
        <onleft>3</onleft>
        <onright>50</onright>
        <onup>2</onup>
        <ondown>2</ondown>
      </control>
    </controlgroup>
	
    <control>
      <description>ListItems Icons</description>
      <type>image</type>
      <posx>67</posx>
      <posy>375</posy>
      <width>120</width>
      <height>120</height>
      <info>ListItem.Icon</info>
      <include>listitem-icon</include>
    </control>

    <control>
      <description>listcontrol</description>
      <type>listcontrol</type>
      <id>50</id>
      <onleft>2</onleft>
      <onright>2</onright>
      <onup>2</onup>
      <ondown>2</ondown>
    </control>

    <control>
      <description>pics thumbnailpanel</description>
      <type>thumbnailpanel</type>
      <id>51</id>
      <onleft>2</onleft>
      <onright>2</onright>
      <onup>2</onup>
      <ondown>2</ondown>
    </control>

  </controls>

</window>


<window>
	<id>0</id>
	<defaultcontrol>300</defaultcontrol>
	<allowoverlay>yes</allowoverlay>
	<controls>
		<include>background</include>

		<control type="image">
			<posx>0</posx>
			<posy>252</posy>
			<width>337</width>
			<height>58</height>
			<visible>Control.HasFocus(300)</visible>
			<texture>homescreenmenu-select.png</texture>
			<include>Bladebuttons-fade-effect</include>
			<animation effect="fade" time="100">VisibleChange</animation>
		</control>

		<controlgroup>
			<control type="wraplist" id="300">
				<description>Home Buttons</description>
				<include>Bladebuttons-fade-effect</include>
				<posx>0</posx>
				<posy>102</posy>
				<width>337</width>
				<height>350</height>
				<visible>true</visible>
				<onup>300</onup>
				<ondown>300</ondown>
				<onleft>101</onleft>
				<onright>100</onright>
				<focusposition>3</focusposition>
				<scrolltime>200</scrolltime>
				<itemlayout height="50">
					<control type="label">
						<posx>320</posx>
						<posy>0</posy>
						<width>337</width>
						<align>right</align>
						<info>ListItem.label</info>
						<font>font35</font>
						<textcolor>70ffffff</textcolor>
					</control>
				</itemlayout>
				<focusedlayout height="50">
					<control type="label">
						<posx>320</posx>
						<posy>0</posy>
						<width>337</width>
						<align>right</align>
						<info>ListItem.label</info>
						<font>font35</font>
					</control>
				</focusedlayout>
				<content>
					<item id="6">
						<description>My Files</description>
						<label>7</label>
						<onclick>XBMC.ActivateWindow(MyFiles)</onclick>
						<icon>106</icon>
					</item>
					<item id="7">
						<description>My Programs</description>
						<label>0</label>
						<onclick>XBMC.ActivateWindow(MyPrograms)</onclick>
						<icon>102</icon>
					</item>
					<item id="8">
						<description>My Pictures</description>
						<label>1</label>
						<onclick>XBMC.ActivateWindow(MyPictures)</onclick>
						<icon>104</icon>
					</item>
					<item id="1">
						<description>My Videos</description>
						<label>3</label>
						<onclick>XBMC.ActivateWindow(MyVideos)</onclick>
						<icon>105</icon>
					</item>
					<item id="2">
						<description>My Music</description>
						<label>2</label>
						<onclick>XBMC.ActivateWindow(MyMusic)</onclick>
						<icon>103</icon>
					</item>
					<item id="3">
						<description>My Weather</description>
						<label>8</label>
						<onclick>XBMC.ActivateWindow(Weather)</onclick>
						<icon>107</icon>
					</item>
					<item id="4">
						<description>Scripts</description>
						<label>Scripts</label>
						<onclick>XBMC.ActivateWindow(Scripts)</onclick>
						<icon>111</icon>
					</item>
					<item id="5">
						<description>Settings</description>
						<label>5</label>
						<onclick>XBMC.ActivateWindow(Settings)</onclick>
						<icon>109</icon>
					</item>
				</content>	
			</control>
		</controlgroup>

		<!-- Home Icons -->

		<control>
			<type>image</type>
			<id>102</id>
			<posx>400</posx>
			<posy>0</posy>
			<width>648</width>
			<height>549</height>
			<texture>16x9homescreen-programs.png</texture>
			<include>home-icons</include>
			<visible>Container(300).HasFocus(7) + Control.HasFocus(300)</visible>
			<include>Bladebuttons-fade-effect</include>
		</control>

		<control>
			<type>image</type>
			<id>106</id>
			<posx>400</posx>
			<posy>0</posy>
			<width>648</width>
			<height>549</height>
			<texture>16x9homescreen-files.png</texture>
			<include>home-icons</include>
			<visible>Container(300).HasFocus(6) + Control.HasFocus(300)</visible>
			<include>Bladebuttons-fade-effect</include>
		</control>

		<control>
			<type>image</type>
			<id>104</id>
			<posx>400</posx>
			<posy>-1</posy>
			<width>648</width>
			<height>548</height>
			<texture>16x9homescreen-pictures.png</texture>
			<include>home-icons</include>
			<visible>Container(300).HasFocus(8) + Control.HasFocus(300)</visible>
			<include>Bladebuttons-fade-effect</include>
		</control>

		<control>
			<type>image</type>
			<id>103</id>
			<posx>400</posx>
			<posy>0</posy>
			<width>493</width>
			<height>549</height>
			<texture>16x9homescreen-music.png</texture>
			<include>home-icons</include>
			<visible>Container(300).HasFocus(2) + Control.HasFocus(300)</visible>
			<include>Bladebuttons-fade-effect</include>
		</control>

		<control>
			<type>image</type>
			<id>105</id>
			<posx>339</posx>
			<posy>0</posy>
			<width>856</width>
			<height>549</height>
			<texture>16x9homescreen-movies.png</texture>
			<include>home-icons</include>
			<visible>Container(300).HasFocus(1) + Control.HasFocus(300)</visible>
			<include>Bladebuttons-fade-effect</include>
		</control>

		<control>
			<type>image</type>
			<id>107</id>
			<posx>400</posx>
			<posy>0</posy>
			<width>520</width>
			<height>549</height>
			<texture>16x9homescreen-weather.png</texture>
			<include>home-icons</include>
			<visible>Container(300).HasFocus(3) + Control.HasFocus(300)</visible>
			<include>Bladebuttons-fade-effect</include>
		</control>

		<control>
			<type>image</type>
			<id>109</id>
			<posx>400</posx>
			<posy>0</posy>
			<width>648</width>
			<height>549</height>
			<texture>16x9homescreen-settings.png</texture>
			<include>home-icons</include>
			<visible>Container(300).HasFocus(5) + Control.HasFocus(300)</visible>
			<include>Bladebuttons-fade-effect</include>
		</control>

		<control>
			<type>image</type>
			<id>111</id>
			<posx>479</posx>
			<posy>0</posy>
			<width>560</width>
			<height>500</height>
			<texture>16x9homescreen-scripts.png</texture>
			<include>home-icons</include>
			<visible>Container(300).HasFocus(4) + Control.HasFocus(300)</visible>
			<include>Bladebuttons-fade-effect</include>
		</control>

		<!-- RSS Feeds -->
		<control type="rss" id="1">
			<description>rss feed</description>
			<posx>0</posx>
			<posy>5</posy>
			<width>1280</width>
			<font>font20</font>
			<urlset>1</urlset>
			<titlecolor>ffc38433</titlecolor>
			<headlinecolor>ffffffff</headlinecolor>
			<textcolor>ffc38433</textcolor>
			<include>startup-effect</include>
			<include>Bladebuttons-fade-effect</include>
		</control>

		<!-- Time/Date -->
		<include>homescreenclock</include>

		<!-- Infoboxes -->
		<include>musicinfobox</include>
		<include>videoinfobox</include>

		<!-- kai window -->

		<!-- The 2 tabhomescreenbuttons -->	
		<include>tabhomescreenbuttons</include>

	</controls>

</window>


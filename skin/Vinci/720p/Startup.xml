<window>
  <defaultcontrol always="true">5</defaultcontrol>
  <allowoverlay>no</allowoverlay>
  <controls>
    <include>background</include>
	
	<control>
      <description>background overlay</description>
      <type>image</type>
      <posx>0</posx>
      <posy>0</posy>
      <width>1280</width>
      <height>720</height>
      <texture>stenen.png</texture>
      <include>startup-image</include>
	  <visible>Window.IsVisible(startup)</visible>
    </control>
	
	<control>
		<description>oranje bedekking</description>
		<type>image</type>
		<posx>0</posx>
		<posy>0</posy>
		<width>1280</width>
		<height>610</height>
		<texture>orangeblade.png</texture>
		<animation effect="slide" start="0,-610" end="0,0" acceleration="-1" delay="1500" time="3000">WindowOpen</animation>
		<visible>Window.IsVisible(startup)</visible>
	</control>
		
	<control>
      <description>ReplaceWindow Trigger</description>
      <type>button</type>
      <id>5</id>
      <posx>35</posx>
      <posy>235</posy>
      <font>special15</font>
      <onfocus>ReplaceWindow(Home)</onfocus>
      <texturefocus>-</texturefocus>
      <texturenofocus>-</texturenofocus>
      <animation effect="fade" time="4500">Focus</animation>
    </control>

  </controls>
</window>
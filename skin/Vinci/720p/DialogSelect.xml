<window>
  <id>2000</id>
  <defaultcontrol>5</defaultcontrol>
  <include>dialog-effect</include>
  <type>dialog</type>
  <coordinates>
    <system>1</system>
    <posx>255</posx>
    <posy>215</posy>
  </coordinates>
  <controls>

    <control>
      <description>Black Background</description>
      <type>image</type>
      <posx>-255</posx>
      <posy>-215</posy>
      <width>1280</width>
      <height>720</height>
      <texture>black.png</texture>
      <animation effect="fade" time="200">WindowOpen</animation>
    </control>

    <control>
      <description>background image</description>
      <type>image</type>
      <id>1</id>
      <posx>5</posx>
      <posy>-5</posy>
      <width>771</width>
      <height>294</height>
      <texture>dialog-invite.png</texture>
    </control>

    <control>
      <description>pics listcontrol</description>
      <type>listcontrol</type>
      <id>3</id>
      <posx>20</posx>
      <posy>10</posy>
      <width>725</width>
      <height>240</height>
      <spinposx>690</spinposx>
      <spinposy>235</spinposy>
      <font>font24</font>
	  <texturefocus>input-focus.png</texturefocus>
	  <texturenofocus>input-nofocus.png</texturenofocus>
      <aligny>center</aligny>
      <onleft>5</onleft>
      <onright>5</onright>
      <onup>5</onup>
      <ondown>5</ondown>
    </control>

    <control>
      <description>IMDB</description>
      <type>button</type>
      <id>5</id>
      <posx>325</posx>
      <posy>230</posy>
      <width>120</width>
      <height>32</height>
      <font>font24</font>
      <align>center</align>
      <label>368</label>
      <texturenofocus>keyboardbtn-nofocus.png</texturenofocus>
      <texturefocus>keyboardbtn-focus.png</texturefocus>
      <onleft>3</onleft>
      <onright>3</onright>
      <onup>3</onup>
      <ondown>3</ondown>
    </control>

  </controls>

</window>


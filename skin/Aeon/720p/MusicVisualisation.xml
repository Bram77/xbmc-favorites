<window id="2006">
	<allowoverlay>no</allowoverlay>
	<controls>

	<control type="visualisation" id="2">
		<description>visualisation</description>
		<posx>0</posx>
		<posy>0</posy>
		<width>1280</width>
		<height>720</height>
	</control>

	<control type="group">
		<posx>0</posx>
		<posy>450</posy>
		<visible>Player.ShowInfo</visible>
		<animation effect="fade" time="500">VisibleChange</animation>

		<control type="image">
			<posx>51</posx>
			<posy>99</posy>
			<height>147</height>
			<width>153</width>
			<info>MusicPlayer.Cover</info>
			<visible>Player.HasAudio</visible>
		</control>

		<control type="image">
			<posx>26</posx>
			<posy>91</posy>
			<height>166</height>
			<width>186</width>
			<texture>case.png</texture>
			<visible>Player.HasAudio</visible>
		</control>

		<control type="group">
		<posx>190</posx>
		<posy>0</posy>		
		<control type="label">
			<posx>50</posx>
			<posy>100</posy>
			<label>Title:</label>
			<font>musicvis</font>
			<textcolor>FF707070</textcolor>
		</control>
		
		<control type="label">
			<posx>50</posx>
			<posy>125</posy>
			<label>Artist:</label>
			<font>musicvis</font>
			<textcolor>FF707070</textcolor>
		</control>
		
		<control type="label">
			<posx>50</posx>
			<posy>150</posy>
			<label>Album:</label>
			<font>musicvis</font>
			<textcolor>FF707070</textcolor>
		</control>
		
		<control type="label">
			<posx>50</posx>
			<posy>175</posy>
			<label>Year:</label>
			<font>musicvis</font>
			<textcolor>FF707070</textcolor>
		</control>
		
		<control type="label">
			<posx>50</posx>
			<posy>200</posy>
			<label>Track:</label>
			<font>musicvis</font>
			<textcolor>FF707070</textcolor>
		</control>
		
		<control type="label">
			<posx>50</posx>
			<posy>225</posy>
			<label>Time:</label>
			<font>musicvis</font>
			<textcolor>FF707070</textcolor>
		</control>
		
		<control type="label">
			<posx>130</posx>
			<posy>100</posy>
			<label>$INFO[MusicPlayer.Title]</label>
			<font>musicvis</font>
			<textcolor>FFFFFFFF</textcolor>
		</control>
		
		<control type="label">
			<posx>130</posx>
			<posy>125</posy>
			<label>$INFO[MusicPlayer.Artist]</label>
			<font>musicvis</font>
			<textcolor>d0FFFFFF</textcolor>
		</control>
		
		<control type="label">
			<posx>130</posx>
			<posy>150</posy>
			<label>$INFO[MusicPlayer.Album]</label>
			<font>musicvis</font>
			<textcolor>d0FFFFFF</textcolor>
		</control>
		
		<control type="label">
			<posx>130</posx>
			<posy>175</posy>
			<label>$INFO[MusicPlayer.Year]</label>
			<font>musicvis</font>
			<textcolor>d0FFFFFF</textcolor>
		</control>
		
		<control type="label">
			<posx>130</posx>
			<posy>200</posy>
			<label>$INFO[MusicPlayer.TrackNumber]</label>
			<font>musicvis</font>
			<textcolor>d0FFFFFF</textcolor>
		</control>
		
		<control type="label">
			<posx>130</posx>
			<posy>225</posy>
			<label>$INFO[MusicPlayer.Time] / $INFO[MusicPlayer.Duration]</label>
			<font>musicvis</font>
			<textcolor>d0FFFFFF</textcolor>
		</control>
		</control>
	
	</control>
	</controls>
</window>

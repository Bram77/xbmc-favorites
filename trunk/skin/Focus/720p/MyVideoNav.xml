		</visible>
		<animation effect="fade" end="100" time="150">Visible</animation>
	</control>
	
	<control type="largeimage">
		<description>fanart overlay (movies viewtype)</description>
		<texture>overlay.png</texture>
		<visible>Control.IsVisible(54) + [Container.Content(movies)|Container.Content(tvshows)]</visible>
		<include>screentype</include>
		<aspectratio>stretch</aspectratio>
		<animation effect="fade" end="100" reversible="true" time="150">WindowOpen</animation>
		<animation effect="fade" end="0" reversible="true" time="150" delay="350">WindowClose</animation>
	</control>
	

<window type="dialog" id="114">
	<defaultcontrol always="true">14</defaultcontrol>
	<visible>Player.HasMedia + Window.IsActive(PlayerControls) + !Window.IsActive(FullscreenVideo)</visible>
	<animation type="WindowOpen">
		<effect type="slide" start="0,100" end="0" time="400" />
		<effect type="fade" time="200" />
	</animation>
	<animation type="WindowClose">
		<effect type="slide" start="0" end="0,100" time="400" />
		<effect type="fade" time="200" />
	</animation>
	
	<controls>
		
		<control type="image">
			<description>Panel</description>
			<posx>0</posx>
			<posy>500</posy>
			<height>95</height>
			<width>720</width>
			<texture>osd-background.png</texture>
		</control>
			
		<control type="group">
			<posx>220</posx>
			<posy>537</posy>
	
			<control type="button" id="13">
				<posx>0</posx>
				<posy>0</posy>
				<width>32</width>
				<height>32</height>
				<onleft>601</onleft>
				<onright>14</onright>
		        <texturefocus>mediacontrols-previous-focus.png</texturefocus>
		        <texturenofocus>mediacontrols-previous.png</texturenofocus>
				<onclick>XBMC.PlayerControl(Previous)</onclick>
			</control>
			
			<control type="togglebutton" id="14">
				<posx>40</posx>
				<posy>0</posy>
				<width>32</width>
				<height>32</height>
				<label>-</label>
				<texturefocus>mediacontrols-pause-focus.png</texturefocus>
				<texturenofocus>mediacontrols-pause.png</texturenofocus>
				<usealttexture>Player.Paused</usealttexture>
				<alttexturefocus>mediacontrols-play-focus.png</alttexturefocus>
				<alttexturenofocus>mediacontrols-play.png</alttexturenofocus>
				<onleft>13</onleft>
				<onright>15</onright>
				<onup>402</onup>
				<ondown>600</ondown>
				<onclick>XBMC.PlayerControl(Play)</onclick>
			</control>
			
			<control type="button" id="15">
				<posx>80</posx>
				<posy>0</posy>
				<width>32</width>
				<height>32</height>
				<onleft>14</onleft>
				<onright>16</onright>
			    <texturefocus>mediacontrols-stop-focus.png</texturefocus>
			    <texturenofocus>mediacontrols-stop.png</texturenofocus>
				<onclick>XBMC.PlayerControl(Stop)</onclick>
			</control>
			
			<control type="button" id="16">
				<posx>120</posx>
				<posy>0</posy>
				<width>32</width>
				<height>32</height>
				<onleft>15</onleft>
				<onright>600</onright>
			    <texturefocus>mediacontrols-next-focus.png</texturefocus>
			    <texturenofocus>mediacontrols-next.png</texturenofocus>
				<onclick>XBMC.PlayerControl(Next)</onclick>
			</control>
			
			<control type="radiobutton" id="600">
				<description>Random button</description>
				<posx>160</posx>
				<posy>0</posy>
				<width>90</width>
				<height>36</height>
				<font>h4</font>
				<label>590</label>
				<align>left</align>
				<aligny>-</aligny>
				<textoffsety>3</textoffsety>
				<texturefocus>default-button.png</texturefocus>
				<texturenofocus>-</texturenofocus>
				<onclick>XBMC.PlayerControl(Random)</onclick>
				<selected>Playlist.IsRandom</selected>
				<pulseonselect>no</pulseonselect>
				<onleft>16</onleft>
				<onright>601</onright>
				<onup>400</onup>
				<ondown>600</ondown>
				<visible>!Player.HasVideo</visible>
			</control>
			
			<control type="togglebutton" id="601">
				<description>Random button</description>
				<posx>260</posx>
				<posy>0</posy>
				<width>90</width>
				<height>36</height>
				<font>h4</font>
				<label>$LOCALIZE[486]: $INFO[Playlist.Repeat]</label>
				<align>center</align>
				<aligny>-</aligny>
				<textoffsety>3</textoffsety>
				<texturefocus>default-button.png</texturefocus>
				<texturenofocus>-</texturenofocus>
				<alttexturefocus>default-button.png</alttexturefocus>
				<alttexturenofocus>-</alttexturenofocus>
				<onclick>XBMC.PlayerControl(Repeat)</onclick>
				<pulseonselect>yes</pulseonselect>
				<onleft>600</onleft>
				<onright>13</onright>
				<onup>400</onup>
				<ondown>600</ondown>
				<visible>!Player.HasVideo</visible>
			</control>

		</control>	
	</controls>
</window>

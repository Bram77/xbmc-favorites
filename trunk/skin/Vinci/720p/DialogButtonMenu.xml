      <height>61</height>
      <texturefocus>sub-dashboard-focus.png</texturefocus>
      <texturenofocus>sub-dashboard-nofocus.png</texturenofocus>
      <pulseonselect>yes</pulseonselect>
      <onclick>XBMC.Dashboard()</onclick>
      <onleft>3114</onleft>
      <onright>3111</onright>
      <onup>3110</onup>
      <ondown>3110</ondown>
      <font>-</font>
      <label>13006</label>
    </control>

    <control>
      <description>Reboot button</description>
      <type>button</type>
      <id>3111</id>
      <posx>90</posx>
      <posy>10</posy>
      <width>61</width>
      <height>61</height>
      <texturefocus>sub-reboot-focus.png</texturefocus>
      <texturenofocus>sub-reboot-nofocus.png</texturenofocus>
      <pulseonselect>yes</pulseonselect>
      <onclick>XBMC.Reset()</onclick>
      <onleft>3110</onleft>
      <onright>3112</onright>
      <onup>3111</onup>
      <ondown>3111</ondown>

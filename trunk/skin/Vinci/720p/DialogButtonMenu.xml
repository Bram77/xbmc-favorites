    <control>
      <description>Profiles button</description>
      <type>button</type>
      <id>3114</id>
      <posx>270</posx>
      <posy>10</posy>
      <width>61</width>
      <height>61</height>
      <texturefocus>sub-profiles-focus.png</texturefocus>
      <texturenofocus>sub-profiles-nofocus.png</texturenofocus>
      <pulseonselect>yes</pulseonselect>
      <onclick>XBMC.ActivateWindow(34)</onclick>
      <onleft>3113</onleft>
      <onright>3110</onright>
      <onup>3114</onup>
      <ondown>3114</ondown>

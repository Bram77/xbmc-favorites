<window>
  <id>111</id>
  <defaultcontrol always="true">3112</defaultcontrol>
  <type>buttonMenu</type>
  <include>shutdownbuttons</include>
  <coordinates>
    <system>1</system>
    <origin x="485" y="60">true</origin>

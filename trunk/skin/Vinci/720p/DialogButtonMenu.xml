      <height>61</height>
      <texturefocus>sub-shutdown-focus.png</texturefocus>
      <texturenofocus>sub-shutdown-nofocus.png</texturenofocus>
      <pulseonselect>yes</pulseonselect>
      <onclick>XBMC.ActivateWindow(Shutdownmenu)</onclick>
      <onleft>3111</onleft>
      <onright>3113</onright>
      <onup>3115</onup>
      <ondown>3115</ondown>
      <font>-</font>
      <label>13005</label>
      <visible allowhiddenfocus="true">!Control.HasFocus(3115)</visible>
    </control>

    <control>
      <description>System Info button</description>
      <type>button</type>
      <id>3113</id>
      <posx>210</posx>
      <posy>10</posy>
      <width>61</width>
      <height>61</height>
      <texturefocus>sub-info-focus.png</texturefocus>
      <texturenofocus>sub-info-nofocus.png</texturenofocus>

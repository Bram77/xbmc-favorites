<window>
  <id>2006</id>
  <defaultcontrol>2</defaultcontrol>
  <allowoverlay>no</allowoverlay>
  <controls>

    <control>
      <description>visualisation</description>
      <type>visualisation</type>
      <id>2</id>
      <posx>0</posx>
      <posy>0</posy>
      <width>1280</width>
      <height>720</height>
    </control>

    <!-- codec & viz infos -->

    <control>
      <description>preset background image</description>
      <type>image</type>
      <id>0</id>
      <posx>-10</posx>
      <posy>40</posy>
      <width>1280</width>
      <height>65</height>
      <texture>osd_menu_bg.png</texture>
      <include>media-info</include>
      <visible>Player.ShowCodec</visible>
    </control>

    <control>
      <description>Codecinfo</description>
      <type>label</type>
      <id>0</id>
      <width>600</width>
      <posx>75</posx>
      <posy>50</posy>
      <label>Audio | $INFO[musicplayer.Codec,Codec: ,]$INFO[musicplayer.Bitrate, - Bitrate: ,kbps]$INFO[musicplayer.bitspersample, - Bits:,bit]$INFO[musicplayer.Samplerate, - Freq.: ,kHz] $INFO[musicplayer.Channels, - Channels: ]</label>
      <align>left</align>
      <font>font12</font>
      <include>media-info</include>
      <visible>Player.ShowCodec</visible>
    </control>

    <control>
      <description>Presets label</description>
      <type>label</type>
      <id>0</id>
      <posx>75</posx>
      <posy>75</posy>
      <width>560</width>
      <label>Visuals | fps: $INFO[System.FPS] - </label>
      <font>font12</font>
      <align>left</align>
      <include>media-info</include>
      <visible>Player.ShowCodec</visible>
    </control>

    <control>
      <description>Presets label</description>
      <type>label</type>
      <id>0</id>
      <posx>225</posx>
      <posy>75</posy>
      <width>420</width>
      <label>$INFO[Visualisation.Name]$INFO[Visualisation.Preset, - ]</label>
      <font>font12</font>
      <align>left</align>
      <include>media-info</include>
      <visible>Player.ShowCodec</visible>
    </control>

    <control>
      <type>image</type>
      <description>Preset locked image</description>
      <id>0</id>
      <posx>210</posx>
      <posy>76</posy>
      <width>12</width>
      <height>15</height>
      <texture>arenaitem-private.png</texture>
      <include>media-info</include>
      <visible>Visualisation.Locked + Player.ShowCodec</visible>
    </control>

    <!-- media infos -->

	<control>
      <description>background image wide</description>
      <type>image</type>
      <id>1</id>
      <posx>542</posx>
      <posy>574</posy>
      <width>738</width>
      <height>118</height>
      <texture>overlayinfowide.png</texture>
      <include>media-info</include>
      <visible>Player.ShowInfo</visible>
    </control>

	<control>
      <description>background image flowers</description>
      <type>image</type>
      <id>1</id>
      <posx>0</posx>
      <posy>363</posy>
      <width>542</width>
      <height>357</height>
      <texture>overlayinfo.png</texture>
      <include>media-info</include>
      <visible>Player.ShowInfo</visible>
	</control>
	  
    <control>
      <description>cover image</description>
      <type>image</type>
      <id>1</id>
      <posx>3</posx>
      <posy>568</posy>
      <width>130</width>
      <height>130</height>
      <info>MusicPlayer.Cover</info>
      <include>media-info</include>
      <visible>Player.ShowInfo</visible>
    </control>
	
	<control>
		<description>Cover Case</description>
		<type>image</type>
		<posx>0</posx>
        <posy>568</posy>
		<width>136</width>
		<height>137</height>
		<texture>cdcoveroverlay.png</texture>
		<include>media-info</include>
		<visible>Player.ShowInfo</visible>
    </control>
	
    <control>
      <description>time label</description>
      <type>label</type>
      <id>1</id>
      <width>430</width>
      <posx>140</posx>
      <posy>598</posy>
      <label>$INFO[musicplayer.Time]</label>
      <align>left</align>
      <font>font24</font>
      <include>media-info</include>
      <visible>Player.ShowInfo</visible>
	  <shadowcolor>60000000</shadowcolor>
    </control>

    <control>
      <description>Artist label</description>
      <type>label</type>
      <id>1</id>
      <width>445</width>
      <posx>140</posx>
      <posy>625</posy>
      <info>MusicPlayer.Artist</info>
      <align>left</align>
      <font>font24</font>
      <include>media-info</include>
      <visible>Player.ShowInfo</visible>
	  <shadowcolor>60000000</shadowcolor>
    </control>

    <control>
      <description>Title label</description>
      <type>label</type>
      <id>1</id>
      <posx>140</posx>
      <posy>648</posy>
      <info>MusicPlayer.Title</info>
      <align>left</align>
      <font>font24B</font>
      <include>media-info</include>
      <visible>Player.ShowInfo</visible>
	  <shadowcolor>60000000</shadowcolor>
    </control>

    <control>
      <description>Album label</description>
      <type>label</type>
      <id>1</id>
      <width>290</width>
      <posx>1270</posx>
      <posy>648</posy>
      <info>MusicPlayer.Album</info>
      <align>right</align>
      <font>font24</font>
      <include>media-info</include>
      <visible>Player.ShowInfo</visible>
	  <shadowcolor>60000000</shadowcolor>
    </control>

    <control>
      <description>Playlist</description>
      <type>label</type>
      <id>1</id>
      <width>200</width>
      <posx>1270</posx>
      <posy>625</posy>
      <label>$INFO[musicplayer.Playlistposition,$LOCALIZE[435] ]$INFO[musicplayer.Playlistlength, / ]</label>
      <align>right</align>
      <font>font24</font>
      <include>media-info</include>
      <visible>Player.ShowInfo</visible>
	  <shadowcolor>60000000</shadowcolor>
    </control>

  </controls>

</window>


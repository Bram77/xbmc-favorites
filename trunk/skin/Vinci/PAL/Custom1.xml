<window>
  <id>56</id>
  <defaultcontrol>10</defaultcontrol>
  <allowoverlay>no</allowoverlay>
  <include>dialog-effect-special</include>
  <type>dialog</type>
  <controls>

    <control>
      <description>filemanager background image</description>
      <type>image</type>
      <id>1</id>
      <width>720</width>
      <height>576</height>

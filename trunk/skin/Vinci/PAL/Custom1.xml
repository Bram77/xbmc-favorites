          <height>29</height>
          <width>520</width>
          <font>font12</font>
          <textoffsetx>10</textoffsetx>
          <aligny>center</aligny>
          <texturefocus>list-focus.png</texturefocus>
          <texturenofocus>-</texturenofocus>
          <label>Use Album Cover &amp; Music Information</label>
          <onclick>Skin.ToggleSetting(music-cover)</onclick>
          <onleft>50</onleft>
          <onright>50</onright>
          <onup>25</onup>
          <ondown>11</ondown>
        </control>
                <control>
                  <description>cover switch radiobutton-on</description>
                  <type>image</type>
                  <posx>575</posx>
                  <posy>157</posy>
                  <texture>settings-check-box.png</texture>
                  <width>16</width>
                  <height>16</height>
                  <visible>Skin.HasSetting(music-cover)</visible>

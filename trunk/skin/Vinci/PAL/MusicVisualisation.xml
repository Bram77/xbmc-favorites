<window>
  <id>2006</id>
  <defaultcontrol>2</defaultcontrol>
  <allowoverlay>no</allowoverlay>
  <controls>

    <control>
      <description>visualisation</description>
      <type>visualisation</type>
      <id>2</id>
      <posx>0</posx>
      <posy>0</posy>
      <width>720</width>
      <height>576</height>
    </control>

    <!-- codec & viz infos -->

    <control>
      <description>preset background image</description>
      <type>image</type>
      <id>0</id>
      <posx>-10</posx>
      <posy>40</posy>
      <width>740</width>
      <height>65</height>
      <texture>osd_menu_bg.png</texture>
      <include>media-info</include>
      <visible>Player.ShowCodec</visible>
    </control>

    <control>
      <description>Codecinfo</description>
      <type>label</type>
      <id>0</id>
      <width>600</width>
      <posx>75</posx>
      <posy>50</posy>
      <label>Audio | $INFO[musicplayer.Codec,Codec: ,]$INFO[musicplayer.Bitrate, - Bitrate: ,kbps]$INFO[musicplayer.bitspersample, - Bits:,bit]$INFO[musicplayer.Samplerate, - Freq.: ,kHz] $INFO[musicplayer.Channels, - Channels: ]</label>
      <align>left</align>
      <font>font12</font>
      <include>media-info</include>
      <visible>Player.ShowCodec</visible>
    </control>

    <control>
      <description>Presets label</description>
      <type>label</type>
      <id>0</id>
      <posx>75</posx>
      <posy>75</posy>
      <width>560</width>
      <label>Visuals | fps: $INFO[System.FPS] - </label>
      <font>font12</font>
      <align>left</align>
      <include>media-info</include>
      <visible>Player.ShowCodec</visible>
    </control>

    <control>
      <description>Presets label</description>
      <type>label</type>
      <id>0</id>
      <posx>225</posx>
      <posy>75</posy>
      <width>420</width>
      <label>$INFO[Visualisation.Name]$INFO[Visualisation.Preset, - ]</label>
      <font>font12</font>
      <align>left</align>
      <include>media-info</include>
      <visible>Player.ShowCodec</visible>
    </control>

    <control>
      <type>image</type>
      <description>Preset locked image</description>
      <id>0</id>
      <posx>210</posx>
      <posy>76</posy>
      <width>12</width>
      <height>15</height>
      <texture>arenaitem-private.png</texture>
      <include>media-info</include>
      <visible>Visualisation.Locked + Player.ShowCodec</visible>
    </control>

    <!-- media infos -->

    <control>
      <description>media info background image</description>
      <type>image</type>
      <id>1</id>
      <posx>-10</posx>
      <posy>455</posy>
      <width>740</width>
      <height>100</height>
      <texture>osd_menu_bg.png</texture>
      <include>media-info</include>
      <visible>Player.ShowInfo</visible>
    </control>

    <control>
      <description>cover image</description>
      <type>image</type>
      <id>1</id>
      <posx>75</posx>
      <posy>455</posy>
      <width>100</width>
      <height>100</height>
      <info>MusicPlayer.Cover</info>
      <aspectratio>keep</aspectratio>
      <include>media-info</include>
      <visible>Player.ShowInfo</visible>
    </control>

    <control>
      <description>Artist label</description>
      <type>label</type>
      <id>1</id>
      <width>445</width>
      <posx>180</posx>
      <posy>458</posy>
      <info>MusicPlayer.Artist</info>
      <align>left</align>
      <font>font12</font>
      <include>media-info</include>
      <visible>Player.ShowInfo</visible>
    </control>

    <control>
      <description>Title label</description>
      <type>label</type>
      <id>1</id>
      <width>430</width>
      <posx>180</posx>
      <posy>479</posy>
      <info>MusicPlayer.Title</info>
      <align>left</align>
      <font>font13</font>
      <include>media-info</include>
      <visible>Player.ShowInfo</visible>
    </control>

    <control>
      <description>Album label</description>
      <type>label</type>
      <id>1</id>
      <width>430</width>
      <posx>180</posx>
      <posy>507</posy>
      <info>MusicPlayer.Album</info>
      <align>left</align>
      <font>font10</font>
      <include>media-info</include>
      <visible>Player.ShowInfo</visible>
    </control>

    <control>
      <description>time label</description>
      <type>label</type>
      <id>1</id>
      <width>430</width>
      <posx>180</posx>
      <posy>528</posy>
      <label>$INFO[musicplayer.Time]$INFO[musicplayer.Duration, / ]</label>
      <align>left</align>
      <font>font10</font>
      <include>media-info</include>
      <visible>Player.ShowInfo</visible>
    </control>

    <control>
      <description>Playlist</description>
      <type>label</type>
      <id>1</id>
      <width>100</width>
      <posx>660</posx>
      <posy>528</posy>
      <label>$INFO[musicplayer.Playlistposition,$LOCALIZE[435] ]$INFO[musicplayer.Playlistlength, / ]</label>
      <align>right</align>
      <font>font10</font>
      <include>media-info</include>
      <visible>Player.ShowInfo</visible>
    </control>

  </controls>

</window>


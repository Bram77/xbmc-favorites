<window id="6">
	<defaultcontrol always="true">50</defaultcontrol>
	<allowoverlay>no</allowoverlay>
	<controls>
		<control type="image">
			<description>background image</description>
			<posx>0</posx>
			<posy>0</posy>
			<width>1280</width>
			<height>720</height>
			<texture>background.png</texture>	
			<aspectratio>keep</aspectratio>
    			<colordiffuse>-</colordiffuse>
		</control>
		<control type="visualisation">
			<width>1280</width>
			<height>720</height>
			<visible>Player.HasAudio</visible>
			<animation effect="fade" time="250">VisibleChange</animation>
		</control>
		<control type="videowindow">
			<description>video preview window</description>
			<posx>230</posx>
			<posy>0</posy>
			<width>1050</width>
			<height>590</height>
			<visible>Player.HasVideo</visible>
			<animation effect="fade" time="250">VisibleChange</animation>
		</control>
		<control type="largeimage" id="13">
			<description>Movie Fanart</description>
			<posx>320</posx>
			<posy>0</posy>
			<width>960</width>
			<height>540</height>
			<info>Listitem.Property(Fanart_Image)</info>
			<visible>system.Idletime(4) + [Control.IsVisible(50) | Control.IsVisible(51) | control.IsVisible(54) | control.IsVisible(55)] + [container.content(movies) | container.content(tvshows)]</visible>
			<visible>!Player.HasMedia</visible>
			<aspectratio>stretch</aspectratio>
			<animation effect="fade" time="800">visible</animation>
		</control>
		<control type="largeimage" id="13">
			<description>TV Fanart</description>
			<posx>320</posx>
			<posy>0</posy>
			<width>960</width>
			<height>540</height>
			<info>Fanart.Image</info>
			<visible>[Control.IsVisible(50) | Control.IsVisible(51) | control.isvisible(56)] + [container.content(seasons) | container.content(episodes)]</visible>
			<visible>!Player.HasMedia</visible>
			<animation effect="fade" time="800">visible</animation>
			<aspectratio>keep</aspectratio>
		</control>
		<control type="multiimage">
			<description>Movies Context Background multimage</description>
			<posx>320</posx>
			<posy>0</posy>
			<width>960</width>
			<height>540</height>
			<imagepath>movies-bg</imagepath>
			<info>skin.string(movies)</info>
			<timeperimage>20000</timeperimage>
			<fadetime>2000</fadetime>
      		<randomize>true</randomize>
			<visible>!Player.HasMedia + container.content(movies)</visible>
			<aspectratio align="bottom">keep</aspectratio>
			<animation effect="fade" start="100" end="0" time="800" condition="system.IdleTime(4) + [control.hasfocus(50) | control.hasfocus(51)] + !IsEmpty(Listitem.Property(Fanart_Image))">conditional</animation>
			<include>backgroundfade</include>
		</control>
		<control type="multiimage">
			<description>TV Shows Context Background multimage</description>
			<posx>320</posx>
			<posy>0</posy>
			<width>960</width>
			<height>540</height>
			<imagepath>tvshows-bg</imagepath>
			<info>skin.string(tvshows)</info>
			<timeperimage>20000</timeperimage>
			<fadetime>2000</fadetime>
      		<randomize>true</randomize>
			<visible>!Player.HasMedia + [container.content(tvshows) | container.content(episodes) | container.content(seasons)]</visible>
			<aspectratio align="bottom">keep</aspectratio>
			<animation effect="fade" start="100" end="0" time="800" reversible="true" condition="[Control.IsVisible(50) | Control.IsVisible(51) | control.IsVisible(54) | control.IsVisible(55)] + [!IsEmpty(Listitem.Property(Fanart_Image)) + system.IdleTime(4)] | !IsEmpty(Fanart.Image)">conditional</animation>
			<include>backgroundfade</include>
		</control>
		<control type="multiimage">
			<description>Music Videos Context Background multimage</description>
			<posx>320</posx>
			<posy>0</posy>
			<width>960</width>
			<height>540</height>
			<imagepath>musicvideos-bg</imagepath>
			<info>skin.string(musicvideos)</info>
			<timeperimage>20000</timeperimage>
			<fadetime>2000</fadetime>
      		<randomize>true</randomize>
			<visible>!Player.HasMedia + [container.content(musicvideos) | container.content(artists)]</visible>
			<aspectratio align="bottom">keep</aspectratio>
			<animation effect="fade" start="100" end="0" time="800" reversible="true" condition="[Control.HasFocus(50) | Control.HasFocus(51) | control.HasFocus(54) | control.HasFocus(55)] + [!IsEmpty(Listitem.Property(Fanart_Image)) + system.IdleTime(4)] | !IsEmpty(Fanart.Image)">conditional</animation>
			<include>backgroundfade</include>
		</control>
		<control type="multiimage">
			<description>Videos Context Background multimage</description>
			<posx>320</posx>
			<posy>0</posy>
			<width>960</width>
			<height>540</height>
			<imagepath>videos-bg</imagepath>
			<info>skin.string(videos)</info>
			<timeperimage>20000</timeperimage>
			<fadetime>2000</fadetime>
      		<randomize>true</randomize>
			<visible>!Player.HasMedia + ![container.content(musicvideos) | container.content(movies) | container.content(tvshows) | container.content(episodes) | container.content(seasons) | container.content(artists)]</visible>
			<aspectratio align="bottom">keep</aspectratio>
			<animation effect="fade" start="100" end="0" time="800" reversible="true" condition="[Control.HasFocus(50) | Control.HasFocus(51) | control.HasFocus(54) | control.HasFocus(55)] + [!IsEmpty(Listitem.Property(Fanart_Image)) + system.IdleTime(4)] | !IsEmpty(Fanart.Image)">conditional</animation>
			<include>backgroundfade</include>
		</control>
		<control type="image">
			<description>background image overlay</description>
			<posx>0</posx>
			<posy>0</posy>
			<width>1280</width>
			<height>720</height>
			<texture>backgroundoverlayright.png</texture>
			<aspectratio>keep</aspectratio>
    			<colordiffuse>-</colordiffuse>
		</control>
		<control type="label">
			<description>Videos Label</description>
			<posx>25</posx>
			<posy>90</posy>
			<width>600</width>
			<height>80</height>
			<label>VIDEOS.LIBRARY</label>
			<align>Left</align>
			<font>large</font>
			<textcolor>fadetext</textcolor>
			<animation effect="fade" time="250" delay="250">VisibleChange</animation>
			<visible>![container.content(movies) | container.content(tvshows) | container.content(episodes) | container.content(seasons) | container.content(musicvideos)]</visible>
		</control>
		<control type="label">
			<description>Movies Label</description>
			<posx>25</posx>
			<posy>90</posy>
			<width>400</width>
			<height>80</height>
			<label>MOVIES</label>
			<align>Left</align>
			<font>large</font>
			<textcolor>fadetext</textcolor>
			<visible>container.content(movies) + ![system.IdleTime(4) + control.hasfocus(51)]</visible>
			<animation effect="fade" time="250" delay="250">VisibleChange</animation>
		</control>
		<control type="label">
			<description>TV Label</description>
			<posx>25</posx>
			<posy>90</posy>
			<width>400</width>
			<height>80</height>
			<label>TELEVISION</label>
			<align>Left</align>
			<font>large</font>
			<textcolor>fadetext</textcolor>
			<visible>[container.content(tvshows) | container.content(episodes) | container.content(seasons)] + ![system.IdleTime(4) + [control.IsVisible(54) | control.isvisible(52)]]</visible>
			<animation effect="fade" time="250" delay="250">VisibleChange</animation>
		</control>
		<control type="label">
			<description>Music TV Label</description>
			<posx>25</posx>
			<posy>90</posy>
			<width>400</width>
			<height>80</height>
			<label>MUSIC VIDEOS</label>
			<align>Left</align>
			<font>large</font>
			<textcolor>fadetext</textcolor>
			<visible>container.content(musicvideos)</visible>
			<animation effect="fade" time="250" delay="250">VisibleChange</animation>
		</control>
		<include>list</include>
		<include>movies</include>
		<include>episodes</include>
		<include>tvposters</include>
		<include>tvbanners</include>
		<include>tvseasons</include>
		<control type="image">
			<description>viewoptions dim</description>
			<posx>0</posx>
			<posy>0</posy>
			<width>1280</width>
			<height>720</height>
			<texture>dim.png</texture>
			<visible>controlgroup(9000).hasfocus(0) + !window.isactive(106)</visible>
			<animation effect="fade" time="150">VisibleChange</animation>
		</control>
		<control type="image">
			<description>viewoptions menu panel</description>
			<posx>590</posx>
			<posy>0</posy>
			<width>720</width>
			<height>720</height>
			<texture>media-background-overlay-menu.png</texture>
			<visible>controlgroup(9000).hasfocus(0) + !window.isactive(106)</visible>
			<animation effect="slide" start="720,0" end="0" time="150">VisibleChange</animation>
		</control>
		<control type="label">
			<description>View Options label</description>
			<posx>1240</posx>
			<posy>100</posy>
			<width>400</width>
			<height>80</height>
			<label>view options</label>
			<align>right</align>
			<font>title</font>
			<shadowcolor>selected</shadowcolor>
			<visible>controlgroup(9000).hasfocus(0) + !window.isactive(106)</visible>
			<textcolor>white</textcolor>
			<animation effect="slide" start="700,0" end="0" time="150" delay="100">Visible</animation>
			<animation effect="slide" start="0,0" end="700,0" time="150">Hidden</animation>
		</control>
	<include>contextmenu</include>
		<control type="grouplist" id="9000">
			<description>View Options Menugroup</description>
			<posx>1000</posx>
			<posy>130</posy>
			<width>240</width>
			<height>720</height>
			<itemgap>0</itemgap>
			<onup>9000</onup>
			<ondown>9000</ondown>
			<onleft>50</onleft>
			<onright>50</onright>
			<animation effect="slide" start="700,0" end="0" time="150" delay="100">Visible</animation>
			<animation effect="slide" start="0,0" end="700,0" time="150">Hidden</animation>
			<visible allowhiddenfocus="true">controlgroup(9000).hasfocus(0) + !window.isactive(106)</visible>
			<orientation>vertical</orientation>
			<control type="button" id="2">
				<description>view</description>
				<label>100</label>
				<textcolor>normal</textcolor>
			</control>
			<control type="button" id="3">
				<description>sort</description>
				<label>103</label>
				<textcolor>normal</textcolor>
				<width>240</width>
				<disabledcolor>fadetext</disabledcolor>
			</control>
			<control type="togglebutton" id="4">
				<description>ascending</description>
				<label>Ascending</label>
				<altlabel>Descending</altlabel>
				<width>240</width>
				<height>50</height>
				<font>small</font>
				<textcolor>normal</textcolor>
				<focusedcolor>selected</focusedcolor>
				<align>right</align>
				<texturefocus>-</texturefocus>
				<texturenofocus>-</texturenofocus>
				<alttexturefocus>-</alttexturefocus>
				<alttexturenofocus>-</alttexturenofocus>
				<textoffsety>15</textoffsety>
				<disabledcolor>fadetext</disabledcolor>
			</control>
			<control type="togglebutton" id="14">
				<width>240</width>
				<height>50</height>
				<font>small</font>
				<textcolor>normal</textcolor>
				<focusedcolor>selected</focusedcolor>
				<disabledcolor>fadetext</disabledcolor>
				<description>Watched Toggle</description>
				<label>Unwatched</label>
				<altlabel>All</altlabel>
				<align>right</align>
				<textoffsety>15</textoffsety>
				<texturefocus>-</texturefocus>
				<texturenofocus>-</texturenofocus>
				<alttexturefocus>-</alttexturefocus>
				<alttexturenofocus>-</alttexturenofocus>
			</control>
			<control type="togglebutton" id="17">
				<width>240</width>
				<height>50</height>
				<font>small</font>
				<textcolor>normal</textcolor>
				<focusedcolor>selected</focusedcolor>
				<disabledcolor>fadetext</disabledcolor>
				<description>Watched Toggle</description>
				<label>Flatten</label>
				<altlabel>Unflatten</altlabel>
				<align>right</align>
				<textoffsety>15</textoffsety>
				<texturefocus>-</texturefocus>
				<texturenofocus>-</texturenofocus>
				<alttexturefocus>-</alttexturefocus>
				<alttexturenofocus>-</alttexturenofocus>
			</control>
			<control type="togglebutton" id="19">
				<width>240</width>
				<height>50</height>
				<font>small</font>
				<textcolor>normal</textcolor>
				<focusedcolor>selected</focusedcolor>
				<disabledcolor>fadetext</disabledcolor>
				<description>Watched Toggle</description>
				<label>Filter</label>
				<align>right</align>
				<textoffsety>15</textoffsety>
				<texturefocus>-</texturefocus>
				<texturenofocus>-</texturenofocus>
				<alttexturefocus>-</alttexturefocus>
				<alttexturenofocus>-</alttexturenofocus>
			</control>
			<control type="button" id="8">
				<description>search</description>
				<label>137</label>
				<textcolor>normal</textcolor>
			</control>
		</control>
		<control type="image">
			<description>background image</description>
			<posx>0</posx>
			<posy>0</posy>
			<width>1280</width>
			<height>720</height>
			<texture>background.png</texture>
			<aspectratio>keep</aspectratio>
    			<colordiffuse>-</colordiffuse>
        		<animation effect="fade" time="200" start="100" end="0">WindowOpen</animation>
        	 	<animation effect="fade" time="200" start="0" end="100">WindowClose</animation>
		</control>
</controls>
</window>
<window id="2004">
	<defaultcontrol>2</defaultcontrol>
	<controls>
		<control type="image" id="0">
			<description>album art</description>
			<posx>100</posx>
			<posy>230</posy>
			<height>300</height>
			<width>300</width>
			<texture>defaultalbumcover.png</texture>
			<info>musicplayer.cover</info>
			<aspectratio>keep</aspectratio>
			<animation type="WindowOpen">
  				<effect type="fade" start="0" end="100" time="800"/>
  				<effect type="slide" start="-300" easing="out" time="200"/>
			</animation>
			<animation type="WindowClose">
  				<effect type="fade" start="100" end="0" time="300"/>
  				<effect type="slide" end="-600" easing="out" time="200"/>
			</animation>
		</control>
		<control type="image" id="0">
			<description>albumart reflection</description>
			<posx>100</posx>
			<posy>530</posy>
			<width>300</width>
			<height>300</height>
			<colordiffuse>d0FFFFFF</colordiffuse>
			<texture flipy=true diffuse="album-diffuse.png">defaultalbumcover.png</texture>
			<info>musicplayer.cover</info>
			<aspectratio>keep</aspectratio>
			<animation type="WindowOpen">
  				<effect type="fade" start="0" end="100" time="800"/>
  				<effect type="slide" start="-300" easing="out" time="200"/>
			</animation>
			<animation type="WindowClose">
  				<effect type="fade" start="100" end="0" time="300"/>
  				<effect type="slide" end="-600" easing="out" time="200"/>
			</animation>
		</control>
		<control type="label" id="0">
			<description>album_info</description>
			<width>400</width>
			<posx>410</posx>
			<posy>470</posy>
			<font>info</font>
			<textcolor>normal</textcolor>
			<align>left</align>
			<label>[LOWERCASE]Now Playing:[CR]"$INFO[MusicPlayer.Title]" by $INFO[MusicPlayer.Artist][CR]From the album "$INFO[MusicPlayer.Album]"[/LOWERCASE]</label>
			<scroll>false</scroll>
			<animation effect="fade" time="1000" delay="500">WindowOpen</animation>
			<animation effect="fade" time="1000" delay="500">WindowClose</animation>

		</control>
	</controls>
</window>
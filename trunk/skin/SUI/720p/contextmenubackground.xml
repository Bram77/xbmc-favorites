<includes>
	<include name="contextmenu">
		<control type="image">
			<description>Context Menu Dim</description>
			<posx>0</posx>
			<posy>0</posy>
			<width>1280</width>
			<height>720</height>
			<texture>dim.png</texture>
			<visible>window.isactive(106)</visible>
			<animation effect="fade" time="150">VisibleChange</animation>
		</control>
		<control type="image">
			<description>Context Menu Background</description>
			<posx>590</posx>
			<posy>0</posy>
			<width>720</width>
			<height>720</height>
			<texture>media-background-overlay-menu.png</texture>
			<visible>window.isactive(106)</visible>
			<animation effect="slide" start="720,0" end="0" time="150">VisibleChange</animation>
		</control>
		<control type="label">
			<description>Context Menu label</description>
			<posx>1240</posx>
			<posy>100</posy>
			<width>400</width>
			<height>80</height>
			<label>context menu</label>
			<align>right</align>
			<font>title</font>
			<visible>window.isactive(106)</visible>
			<textcolor>white</textcolor>
			<shadowcolor>selected</shadowcolor>
			<animation effect="slide" start="700,0" end="0" time="150" delay="100">Visible</animation>
			<animation effect="slide" start="0,0" end="700,0" time="150">Hidden</animation>
		</control>
	</include>
</includes>
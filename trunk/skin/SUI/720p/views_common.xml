<includes>
	<include name="list">
	<control type="group">
			<visible>control.isvisible(50)</visible>
			<include>contentpanellist</include>
			<include>contentpanellines</include>
	</control>
		<control type="fixedlist" id="50">
			<posx>390</posx>
			<posy>155</posy>
			<width>700</width>
			<height>415</height>
			<onleft>9000</onleft>
			<onright>9000</onright>
			<onup>50</onup>
			<ondown>50</ondown>
    			<focusposition>7</focusposition>
			<viewtype label="list">list</viewtype>
			<scrolltime>200</scrolltime>
			<itemlayout height="30" width="500">
				<control type="label">
					<posx>700</posx>
					<posy>0</posy>
					<width>545</width>
					<height>30</height>
					<align>right</align>
					<textcolor>normal</textcolor>
					<info>listitem.label</info>
					<selectedcolor>normal</selectedcolor>
				</control>
			</itemlayout>
			<focusedlayout height="60" width="500">
				<control type="label">
					<posx>700</posx>
					<posy>10</posy>
					<width>545</width>
					<height>60</height>
					<align>right</align>
					<font>listlarge</font>
					<textcolor>selected</textcolor>
					<info>listitem.label</info>
					<scroll>true</scroll>
					<visible>control.hasfocus(50)</visible>
					<selectedcolor>selected</selectedcolor>
				</control>
				<control type="label">
					<posx>700</posx>
					<posy>10</posy>
					<width>545</width>
					<height>60</height>
					<align>right</align>
					<font>listlarge</font>
					<textcolor>normal</textcolor>
					<info>listitem.label</info>
					<scroll>true</scroll>
					<visible>!control.hasfocus(50)</visible>
					<selectedcolor>selected</selectedcolor>
				</control>
			</focusedlayout>
		</control>
		<control type="image">
			<description>List Fade</description>
			<posx>0</posx>
			<posy>131</posy>
			<width>1280</width>
			<height>461</height>
			<visible>control.IsVisible(50)</visible>
			<texture>list-fade.png</texture>
			<aspectratio>stretch</aspectratio>
			<animation effect="fade" start="0" end="100" time="200">VisibleChange</animation>
		</control>
		<control type="image">
			<description>Chevron</description>
			<posx>1135</posx>
			<posy>140</posy>
			<width>30</width>
			<height>30</height>
			<visible>control.IsVisible(50)</visible>
			<texture>chevron.png</texture>
			<aspectratio>keep</aspectratio>
			<animation effect="fade" start="0" end="100" time="200">VisibleChange</animation>
		</control>
		<control type="image">
			<description>Chevron down</description>
			<posx>1135</posx>
			<posy>550</posy>
			<width>30</width>
			<height>30</height>
			<visible>control.IsVisible(50)</visible>
			<texture flipy="true">chevron.png</texture>
			<aspectratio>keep</aspectratio>
			<animation effect="fade" start="0" end="100" time="200">VisibleChange</animation>
		</control>
	<description>Music List Context Information</description>
		<control type="label">
			<description>Large Music Artist Context Label</description>
			<posx>1160</posx>
			<posy>600</posy>
			<width>1180</width>
			<height>30</height>
			<align>right</align>
			<font>infolarge</font>
			<textcolor>normal</textcolor>
			<info>listitem.artist</info>
			<visible>control.isVisible(50) + Window.IsActive(502) + container.content(Albums) | container.content(songs)</visible>
			<animation effect="fade" start="0" end="100" time="200" delay="200">VisibleChange</animation>
		</control>
		<control type="image">
			<description>Large Music AlbumArt</description>
			<posx>25</posx>
			<posy>153</posy>
			<width>405</width>
			<height>405</height>
			<info>listitem.icon</info>
			<visible>control.isVisible(50) + Window.IsActive(502) + container.content(Albums) | container.content(songs)</visible>
			<aspectratio aligny="bottom">stretch</aspectratio>
			<include>listcontextinfo</include>
		</control>
		<control type="label">
			<posx>430</posx>
			<posy>562</posy>
			<width>405</width>
			<height>30</height>
			<font>small</font>
			<align>right</align>
			<textcolor>normal</textcolor>
			<label>[LOWERCASE]$INFO[listitem.album][/LOWERCASE]</label>
			<visible>control.isVisible(50) + Window.IsActive(502) + container.content(songs) + !isempty(listitem.album)</visible>
			<animation effect="fade" start="0" end="100" time="200">VisibleChange</animation>
		</control>
	<description>End of Music List Context Information</description>

	<description>Movie List Context Information</description>
	<control type="group">
		<include>listcontextinfo</include>
		<visible>control.isvisible(50) + container.content(movies)</visible>
		<control type="image">
			<description>Movie Poster</description>
			<posx>25</posx>
			<posy>137</posy>
			<width>500</width>
			<height>448</height>
			<texture fallback="">$INFO[container(50).listitem.thumb]</texture>
			<aspectratio aligny="bottom" align="right">keep</aspectratio>
		</control>
	</control>

	<control type="group">
		<description>TV Titles/Seasons Context Information</description>
		<visible>control.isVisible(50) + [container.content(tvshows) | container.content(seasons)]</visible>
			<control type="image">
				<description>TV Show Poster/banner</description>
				<posx>25</posx>
				<posy>160</posy>
				<width>500</width>
				<height>400</height>
				<texture fallback="">$INFO[listitem.thumb]</texture>
				<aspectratio aligny="bottom" align="right">keep</aspectratio>
				<include>listcontextinfo</include>
			</control>
			<control type="label">
				<posx>525</posx>
				<posy>564</posy>
				<width>500</width>
				<height>30</height>
				<textcolor>normal</textcolor>
				<align>right</align>
				<visible>!IsEmpty(ListItem.Property(WatchedEpisodes))</visible>
				<label>watched [B]$INFO[ListItem.Property(WatchedEpisodes)][/B] unwatched[B] $INFO[ListItem.Property(UnWatchedEpisodes)][/B]</label>
			</control>
	</control>
			<control type="label">
				<posx>1155</posx>
				<posy>600</posy>
				<width>1180</width>
				<height>30</height>
				<textcolor>normal</textcolor>
				<align>right</align>
				<font>infolarge</font>
				<label>[LOWERCASE]$INFO[listitem.tvshowtitle][/LOWERCASE]</label>
				<visible>control.isVisible(50) + container.content(tvshows)</visible>
				<include>listcontextinfo</include>
			</control>

	<control type="group">
		<description>TV Episodes Context Information</description>
		<include>listcontextinfo</include>
		<visible>control.isVisible(50) + container.content(episodes)</visible>
			<control type="image">
				<description>Episode Thumbnail</description>
				<posx>25</posx>
				<posy>140</posy>
				<width>500</width>
				<height>220</height>
				<texture fallback="">$INFO[listitem.thumb]</texture>
				<aspectratio aligny="bottom" align="left">keep</aspectratio>
			</control>
			<control type="label">
				<posx>25</posx>
				<posy>368</posy>
				<width>500</width>
				<height>30</height>
				<textcolor>normal</textcolor>
				<align>left</align>
				<visible>!IsEmpty(ListItem.episode)</visible>
				<label>s[B]$INFO[listitem.season][/B]e[B]$INFO[listitem.episode][/B]</label>
			</control>
			<control type="textbox">
				<posx>25</posx>
				<posy>392</posy>
				<width>500</width>
				<height>200</height>
				<textcolor>normal</textcolor>
				<align>justify</align>
				<label>$INFO[listitem.plot]</label>
				<include>listcontextinfo</include>
      			<pagecontrol>1</pagecontrol>
     				<autoscroll delay="4000" time="2500" repeat="10000">control.HasFocus(50)</autoscroll>
        			<wrapmultiline>true</wrapmultiline>
			</control>
	</control>
			<control type="label">
				<posx>1155</posx>
				<posy>600</posy>
				<width>1180</width>
				<height>30</height>
				<textcolor>normal</textcolor>
				<align>right</align>
				<font>infolarge</font>
				<label>[LOWERCASE]$INFO[listitem.tvshowtitle][/LOWERCASE]</label>
				<visible>control.isVisible(50) + [container.content(episodes) | container.content(seasons)]</visible>
				<visible>!IsEmpty(ListItem.tvshowtitle)</visible>
				<animation effect="fade" time="180" start="0" end="100">VisibleChange</animation>
			</control>
	<description>Files Info</description>
		<control type="image">
			<description>Files Thumbnail</description>
			<posx>25</posx>
			<posy>140</posy>
			<width>500</width>
			<height>400</height>
			<texture>-</texture>
			<info>listitem.Icon</info>
			<aspectratio aligny="bottom" align="left">keep</aspectratio>
			<visible>control.isVisible(50) + container.content(files)</visible>
			<include>listcontextinfo</include>
		</control>
		<control type="label">
			<posx>1155</posx>
			<posy>600</posy>
			<width>1130</width>
			<height>30</height>
			<textcolor>normal</textcolor>
			<align>right</align>
			<font>infolarge</font>
			<haspath>true</haspath>
			<label>[LOWERCASE]$INFO[Container.FolderPath][/LOWERCASE]</label>
			<visible>control.isVisible(50) + container.content(files)</visible>
			<visible>false</visible>
			<animation effect="fade" start="0" end="100" time="200" delay="200">VisibleChange</animation>
		</control>
		<control type="label">
			<posx>25</posx>
			<posy>568</posy>
			<width>1130</width>
			<height>30</height>
			<textcolor>normal</textcolor>
			<align>left</align>
			<font>small</font>
			<label>[LOWERCASE]$INFO[listitem.label][/LOWERCASE] [COLOR fadetext]$INFO[listitem.label2][/COLOR]</label>
			<visible>control.isVisible(50) + container.content(files)</visible>
			<animation effect="fade" start="0" end="100" time="200" delay="200">VisibleChange</animation>
		</control>
	<description>End of Files Info</description>
	<description>Pictures Info</description>
		<control type="image">
			<description>Pictures Thumbnail</description>
			<posx>25</posx>
			<posy>140</posy>
			<width>500</width>
			<height>400</height>
			<texture>-</texture>
			<info>listitem.Icon</info>
			<aspectratio aligny="bottom" align="left">keep</aspectratio>
			<visible>control.isVisible(50) + window.isactive(2)</visible>
			<include>listcontextinfo</include>
		</control>
		<control type="label">
			<posx>25</posx>
			<posy>545</posy>
			<width>1130</width>
			<height>30</height>
			<textcolor>normal</textcolor>
			<align>left</align>
			<font>small</font>
			<label>[LOWERCASE]$INFO[listitem.label][/LOWERCASE] [COLOR fadetext]$INFO[listitem.label2][/COLOR]</label>
			<visible>control.isVisible(50) + window.isactive(2)</visible>
			<animation effect="fade" start="0" end="100" time="200" delay="200">VisibleChange</animation>
		</control>
		<control type="label">
			<posx>22</posx>
			<posy>570</posy>
			<width>1130</width>
			<height>30</height>
			<textcolor>normal</textcolor>
			<align>left</align>
			<font>small</font>
			<label>[LOWERCASE]$INFO[ListItem.PictureResolution][/LOWERCASE]</label>
			<visible>control.isVisible(50) + window.isactive(2)</visible>
			<animation effect="fade" start="0" end="100" time="200" delay="200">VisibleChange</animation>
		</control>
	<description>End of pictures info</description>
	<description>Music Video Info</description>
		<control type="image">
			<description>Music Videos Thumbnail</description>
			<posx>25</posx>
			<posy>140</posy>
			<width>500</width>
			<height>440</height>
			<texture fallback="">$INFO[listitem.icon]</texture>
			<aspectratio aligny="bottom" align="left">keep</aspectratio>
			<visible>control.isVisible(50) + container.content(musicvideos)</visible>
			<include>listcontextinfo</include>
		</control>
	<description>End of Music Video Info</description>
	</include>
</includes>

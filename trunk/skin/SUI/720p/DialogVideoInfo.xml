<window id="2003">
	<defaultcontrol>5</defaultcontrol>
	<allowoverlay>no</allowoverlay>
	<controls>
	<control type="group">
	<include>dialogfade</include>
		<control type="image">
			<description>background image</description>
			<posx>0</posx>
			<posy>0</posy>
			<width>1280</width>
			<height>720</height>
			<texture>background.png</texture>	
			<aspectratio>keep</aspectratio>
    			<colordiffuse>-</colordiffuse>
		</control>
		<control type="largeimage" id="13">
			<description>Movie Fanart</description>
			<posx>640</posx>
			<posy>0</posy>
			<width>640</width>
			<height>360</height>
			<texture>$INFO[Listitem.Property(Fanart_Image)]</texture>
			<aspectratio>stretch</aspectratio>
			<animation effect="fade" time="800">visible</animation>
		</control>
		<control type="largeimage" id="13">
			<description>TV Fanart</description>
			<posx>640</posx>
			<posy>0</posy>
			<width>640</width>
			<height>360</height>
			<texture>$INFO[Fanart.image]</texture>
			<aspectratio>stretch</aspectratio>
			<animation effect="fade" time="800">visible</animation>
		</control>
		<control type="image">
			<description>background image overlay</description>
			<posx>0</posx>
			<posy>0</posy>
			<width>1280</width>
			<height>720</height>
			<texture>backgroundoverlayright.png</texture>
			<aspectratio>keep</aspectratio>
    			<colordiffuse>-</colordiffuse>
		</control>
	</control>
	<control type="group">
		<include>dialogfade</include>
		<posx>314</posx>
		<posy>340</posy>
		<control type="image">
			<posx>-14</posx>
			<posy>81</posy>
			<width>814</width>
			<height>3</height>
			<texture>media-background-black.png</texture>
		</control>
		<control type="image">
			<posx>-314</posx>
			<posy>325</posy>
			<width>1280</width>
			<height>3</height>
			<texture>media-background-black.png</texture>
		</control>
		<control type="label">
			<description>INFO Label</description>
			<posy>-40</posy>
			<width>400</width>
			<height>80</height>
			<label>INFO</label>
			<align>Left</align>
			<font>large</font>
			<textcolor>fadetext</textcolor>
		</control>
		<control type="label">
			<width>800</width>
			<height>30</height>
			<align>left</align>
			<font>small</font>
			<textcolor>selected</textcolor>
			<info>listitem.year</info>
		</control>
		<control type="label" id="20">
			<posy>22</posy>
			<width>970</width>
			<height>30</height>
			<align>left</align>
			<font>infolarge</font>
			<scroll>true</scroll>
			<textcolor>selected</textcolor>
		</control>
		<control type="textbox" id="4">
			<posy>83</posy>
			<width>800</width>
			<height>243</height>
			<align>justify</align>
			<font>small</font>
			<textcolor>normal</textcolor>
			<label>-</label>
      		<pagecontrol>1</pagecontrol>
			<visible>!window.isactive(126)</visible>
     			<autoscroll delay="4000" time="2500" repeat="10000"></autoscroll>
		</control>
	</control>
		<control type="image" id="3">
			<include>dialogfade</include>
			<posx>25</posx>
			<posy>45</posy>
			<width>275</width>
			<height>405</height>
			<texture fallback="defaultvideocover.png">-</texture>
			<aspectratio aligny="bottom" align="right">keep</aspectratio>
		</control>
		<control type="image">
			<description>Movie poster reflection</description>
			<posx>25</posx>
			<posy>450</posy>
			<width>275</width>
			<height>405</height>
			<colordiffuse>d0FFFFFF</colordiffuse>
			<texture flipy="true" diffuse="album-diffuse.png">defaultvideocover.png</texture>
			<info>listitem.icon</info>
			<aspectratio aligny="top" align="right">keep</aspectratio>
			<animation effect="fade" start="0" end="100" time="200" delay="250">WindowOpen</animation>
			<animation effect="slide" start="0,-405" end="0,0" time="200" delay="250">WindowOpen</animation>
			<include>dialogfade</include>
		</control>
		<control type="grouplist" id="1">
			<posx>25</posx>
			<posy>670</posy>
			<width>1280</width>
			<height>40</height>
			<itemgap>5</itemgap>
			<onup>50</onup>
			<ondown>-</ondown>
			<onright>1</onright>
			<onleft>1</onleft>
			<orientation>horizontal</orientation>
			<include>dialogfade</include>
		<control type="button" id ="5">
			<description>plot/cast</description>
			<label>206</label>
			<width>174</width>
			<align>center</align>
		</control>
		<control type="button" id ="8">
			<description>play</description>
			<label>208</label>
			<width>174</width>
			<align>center</align>
		</control>
		<control type="button" id ="9">
			<description>resume</description>
			<label>13404</label>
			<width>174</width>
			<align>center</align>
		</control>
		<control type="button" id ="6">
			<description>refresh</description>
			<label>184</label>
			<width>174</width>
			<align>center</align>
		</control>
		<control type="button" id ="10">
			<description>get_thumb</description>
			<label>13405</label>
			<width>174</width>
			<align>center</align>
		</control>
		<control type="button" id="12">
			<description>Get Fanart</description>
			<label>Get Fanart</label>
			<enable>Container.Content(Movies) | Container.Content(TVShows)</enable>
			<width>174</width>
			<align>center</align>
		</control>
		<control type="button" id="11">
			<description>Play Trailer</description>
			<label>Trailer</label>
			<enable>!IsEmpty(ListItem.Trailer)</enable>
			<width>174</width>
			<align>center</align>
		</control>
		</control>
                <control type="fixedlist" id="50">
			<include>dialogfade</include>
			<description>cast</description>
			<posx>314</posx>
			<posy>424</posy>
			<width>941</width>
			<height>241</height>
			<onup>1</onup>
			<ondown>1</ondown>
			<onleft>5</onleft>
			<onright>5</onright>
			<focusposition>4</focusposition>
			<orientation>vertical</orientation>
		        <pagecontrol>61</pagecontrol>
		        <scrolltime>200</scrolltime>
		        <itemlayout width="250" height="31">
			   <control type="label">
		        	<posx>10</posx>
		        	<posy>3</posy>
        			<width>550</width>
			      <height>22</height>
        			<info>ListItem.Label</info>
				<textcolor>normal</textcolor>
			    </control>
			</itemlayout>
                     <focusedlayout width="941" height="31">
			    <control type="label">
 			        <posx>10</posx>
			        <posy>3</posy>
			        <width>550</width>
			        <height>22</height>
			        <info>ListItem.Label</info>
				  <textcolor>selected</textcolor>
				  <visible>control.hasfocus(50)</visible>
			     </control>
			   <control type="label">
		        	<posx>10</posx>
		        	<posy>3</posy>
        			<width>550</width>
			      <height>22</height>
        			<info>ListItem.Label</info>
				<visible>!control.hasfocus(50)</visible>
				<textcolor>normal</textcolor>
			    </control>
	          </focusedlayout>
                 </control>
			    <control type="image">
				  <include>dialogfade</include>
			        <posx>890</posx>
			        <posy>427</posy>
			        <width>224</width>
			        <height>234</height>
       			  <texture fallback="unknown_user.png">$INFO[container(50).listitem.thumb]</texture>
				  <aspectratio align="right">keep</aspectratio>
     				  <visible>Control.IsVisible(50) + ![Container(50).OnNext | Container(50).OnPrevious]</visible>
        			  <animation effect="fade" start="0" end="100" time="100" delay="100">Visible</animation>
			    </control>
	</controls>
</window>
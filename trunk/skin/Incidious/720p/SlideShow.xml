<window id="2007">
<defaultcontrol>2</defaultcontrol>
<allowoverlay>no</allowoverlay>
	
<controls>
		
		<!-- Media Info -->
		<control type="group">
			<posx>0</posx>
			<posy>550</posy>
			<visible>Player.ShowInfo + Player.HasMedia</visible>
			<include>MediaOverlay</include>
			<include>DefaultFadeAnimation</include>
			<control type="image" id="0">
				<description>album cover</description>
				<posx>50</posx>
				<posy>5</posy>
				<width>90</width>
				<height>90</height>
				<texture>DefaultAlbumCover.png</texture>
				<info>MusicPlayer.Cover</info>
				<aspectratio>stretch</aspectratio>
			</control>
			<control type="label" id="0">
				<description>album</description>
				<posx>160</posx>
				<posy>10</posy>
				<align>left</align>
				<label>$INFO[MusicPlayer.Album] $INFO[MusicPlayer.Year, (,)]</label>
				<scroll>true</scroll>
				<font>DialogTextFont</font>
				<textcolor>DialogText</textcolor>
			</control>
			<control type="label" id="0">
				<description>artist</description>
				<posx>160</posx>
				<posy>30</posy>
				<align>left</align>
				<label>$INFO[MusicPlayer.Artist]</label>
				<scroll>true</scroll>
				<font>DialogTextFont</font>
				<textcolor>DialogText</textcolor>
			</control>
			<control type="label" id="0">
				<description>track title</description>
				<posx>160</posx>
				<posy>50</posy>
				<align>left</align>
				<label>$INFO[MusicPlayer.Title]</label>
				<scroll>true</scroll>
				<font>DialogTextFont</font>
				<textcolor>DialogText</textcolor>
			</control>
			<control type="label" id="0">
				<description>time</description>
				<posx>160</posx>
				<posy>70</posy>
				<align>left</align>
				<label>$INFO[MusicPlayer.Time]$INFO[MusicPlayer.Duration, / ]</label>
				<font>DialogTextFont</font>
				<textcolor>DialogText</textcolor>
			</control>
		</control>
	</controls>
</window>
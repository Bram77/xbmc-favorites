	<defaultcontrol>50</defaultcontrol>
	<animation effect="fade" time="800">WindowClose</animation> 
	<allowoverlay>yes</allowoverlay>
	<controls>
	
	<control>
		<description>Panel Image</description>
		<type>image</type>
		<posx>5</posx>
		<posy>10</posy>
		<width>710</width>
		<height>556</height>
		<texture>background2.png</texture>
        </control>



<control>
		<description>Background</description>
		<type>image</type>
		<posx>0</posx>
		<posy>0</posy>
		<width>720</width>
		<height>576</height>
		<texture>blacknwhite.png</texture>
		<animation effect="fade" time="800">WindowOpen</animation>
	    <animation effect="fade" time="800">WindowClose</animation> 
        </control>
<control>
		<description>Panel Image</description>
		<type>image</type>
		<posx>0</posx>
		<posy>0</posy>
		<width>720</width>
		<height>576</height>
		<texture>back-row.png</texture>
		<animation effect="fade" time="800">WindowOpen</animation>
	    <animation effect="fade" time="800">WindowClose</animation> 
        </control>

<control>
		<description>Panel Image</description>
		<type>image</type>
		<posx>0</posx>
		<posy>0</posy>
		<width>720</width>
		<height>576</height>
		<texture>scriptsbg.png</texture>
		<visible>!Skin.HasSetting(Wallpaper)</visible>
		<visible>!Skin.HasSetting(Default Wallpaper)</visible>
		</control>

<control type="multiimage">
		<posx>0</posx>
		<posy>0</posy>
		<width>720</width>
		<height>576</height>
		<imagepath>Scripts</imagepath>
		<info>Skin.String(CustomScripts)</info>
		<timeperimage>5000</timeperimage>
		<fadetime>2000</fadetime>
        <randomize>true</randomize>
		<visible>Skin.HasSetting(Wallpaper) + !Skin.HasSetting(CustomScripts) + !Skin.HasSetting(CustomScriptsFoldOn)</visible>
		<visible>!Skin.HasSetting(Default Wallpaper)</visible>

		<animation effect="fade" time="400">WindowOpen</animation>
         <animation effect="fade" time="300">WindowClose</animation>
         <animation effect="fade" time="800">Visible</animation>
         <animation effect="fade" delay = "200" time="800">Hidden</animation>
		</control>

<include>listcontrol</include>

<include>List 2</include>

<include>List 3</include>	


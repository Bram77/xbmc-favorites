<window id="25">
	<defaultcontrol>50</defaultcontrol>
	<allowoverlay>yes</allowoverlay>
	<controls>
	
	<control type="multiimage">
		<include>mediabackground</include>
		<imagepath>Default</imagepath>
		<info>Skin.String(CustomMovies)</info>
		<visible>Skin.HasSetting(videomovies) + !Skin.HasSetting(CustomMoviesFoldOn)</visible>
	</control>

	<control type="multiimage">
		<include>mediabackgroundfolder</include>
		<info>Skin.String(CustomMoviesFolder)</info>
		<visible>Skin.HasSetting(videomovies) + !Skin.HasSetting(CustomMoviesFolder)</visible>
	</control>

	<control type="multiimage">
		<include>mediabackground</include>
		<imagepath>Default</imagepath>
		<info>Skin.String(CustomTV)</info>
		<visible>Skin.HasSetting(videotv) + !Skin.HasSetting(CustomTVFoldOn)</visible>
	</control>

	<control type="multiimage">
		<include>mediabackgroundfolder</include>
		<info>Skin.String(CustomTVFolder)</info>
		<visible>Skin.HasSetting(videotv) + !Skin.HasSetting(CustomTVFolder)</visible>
	</control>

    <control type="image" id="86">
            <texture>-</texture>
            <visible>!Control.IsVisible(84)</visible>
            <animation effect="fade" time="200">Hidden</animation>
    </control>
	
	<control type="image">
		<posx>0</posx>
		<posy>0</posy>
		<width>1280</width>
		<height>720</height>
		<animation effect="fade" end="0" time="200">WindowClose</animation>
		<animation effect="fade" start="0" end="100" time="400">Visible</animation>
		<texture>$INFO[listitem.property(fanart_image)]</texture>
		<visible>[Container.Content(tvshows) | Container.Content(movies)] + [Control.IsVisible(53) | Control.IsVisible(57)] + !Skin.HasSetting(listitemfanart) + !IsEmpty(listitem.property(fanart_image)) + Control.IsVisible(84) + !Control.IsVisible(86)</visible>
	</control>
	
	<control type="image">
		<include>mediabackgroundfolder</include>
		<animation effect="fade" start="0" end="100" time="200">VisibleChange</animation>
		<texture flipy="true" diffuse="tvmask.png">photowallpaper.png</texture>
		<visible>[Control.IsVisible(53) | Control.IsVisible(57)] + [Container.Content(movies) | Container.Content(tvshows) | Skin.hasSetting(fanart)] + !Window.IsActive(2003)</visible>
	</control>
	
	<control type="image">
		<include>mediabackgroundfolder</include>
		<animation effect="fade" start="0" end="100" time="200">VisibleChange</animation>
		<texture>photowallpaper.png</texture>
		<visible>[Control.IsVisible(53) | Control.IsVisible(57)] + !Skin.HasSetting(fanart) + [Container.Content(seasons) | Container.Content(episodes)]</visible>
	</control>
	
	<control type="image">
		<posx>-5</posx>
		<posy>-5</posy>
		<width>1290</width>
		<height>730</height>
		<animation effect="fade" end="0" time="200">WindowClose</animation>
		<animation effect="fade" start="0" end="100" time="200">VisibleChange</animation>
		<texture diffuse="tvmask.png">$INFO[Fanart.Image]</texture>
		<visible>Skin.HasSetting(videotv) + [Container.Content(episodes) | Container.Content(seasons)] + [Control.IsVisible(53) | Control.IsVisible(57)] + !Skin.HasSetting(fanart)</visible>
	</control>
	
	<control type="image">
		<posx>-5</posx>
		<posy>-5</posy>
		<width>1290</width>
		<height>730</height>
		<animation effect="fade" end="0" time="200">WindowClose</animation>
		<animation effect="fade" start="0" end="100" time="200">VisibleChange</animation>
		<texture>$INFO[Fanart.Image]</texture>
		<visible>[Skin.HasSetting(videotv) + [Container.Content(movies) | Container.Content(episodes) | Container.Content(seasons)] + [!Control.IsVisible(53) + !Control.IsVisible(57)] + !Skin.HasSetting(fanart)]</visible>
	</control>
	
	<include>wallglass</include>
	<include>vignette</include>
	<include>Viewtype_Posterwall</include>
	<include>wallmenu</include>

	<include>time</include>
	<include>tutorial</include>
	
	<control type="group">
		<posx>0</posx>
		<posy>0</posy>
		<width>1280</width>
		<height>720</height>
		<include>common-fade-quick</include>
		<animation effect="slide" start="0,0" end="551,0" time="150" acceleration="-1" condition="[Window.IsActive(111) | Window.IsActive(106) | Window.IsActive(132) | Window.IsActive(129)] + [!Control.IsVisible(57) + !Control.IsVisible(58) + !Control.IsVisible(59) + !Control.IsVisible(51)]">Conditional</animation>
		<animation effect="slide" start="0,0" end="-1701,0" time="250" acceleration="-1" condition="Window.IsActive(2003)">Conditional</animation>	
		<include>mediaglass</include>
		
		<control type="label">
			<include>wallmenu-slide</include>
			<label>MOVIES</label>
			<visible>Skin.HasSetting(videomovies) + !Window.IsActive(2003)</visible>
			<include>medialabel</include>
		</control>

		<control type="label">
			<include>wallmenu-slide</include>
			<label>MOVIES (iMDB - Back to exit)</label>
			<visible>Skin.HasSetting(videomovies) + Window.IsActive(2003)</visible>
			<include>medialabel</include>
		</control>

		<control type="label">
			<include>wallmenu-slide</include>
			<label>TV SHOWS</label>
			<visible>Skin.HasSetting(videotv)</visible>
			<include>medialabel</include>
		</control>

		<control type="label">
			<include>wallmenu-slide</include>
			<label>ADULT</label>
			<visible>Skin.HasSetting(videoadult)</visible>
			<include>medialabel</include>
		</control>
	
		<control type="grouplist" id="40">
			<include>wallmenu-slide</include>
			<include>mediamenugroup</include>
			<visible>!Window.IsActive(2003)</visible>

			<control type="button" id="2">
				<label>100</label>
				<include>mediamenu</include>
			</control>

			<control type="button" id="3">
				<label>103</label>
				<include>mediamenu</include>
			</control>

			<control type="button" id="8">
				<label>137</label>
				<include>mediamenu</include>
			</control>

			<control type="button" id="20">
				<label>Setup</label>
				<include>mediamenu</include>
				<onclick>XBMC.ActivateWindow(myvideossettings)</onclick>
			</control>			
			
			<control type="button" id="30">
				<label>Files</label>
				<include>mediamenu</include>
				<onclick>Skin.Reset(movielibrary)</onclick>
				<onclick>XBMC.ReplaceWindow(MyVideoFiles,Movies)</onclick>
				<visible>Skin.HasSetting(videomovies)</visible>
			</control>

			<control type="button" id="31">
				<label>Files</label>
				<include>mediamenu</include>
				<onclick>Skin.Reset(tvlibrary)</onclick>
				<onclick>XBMC.ReplaceWindow(MyVideoFiles,TV Shows)</onclick>
				<visible>Skin.HasSetting(videotv)</visible>
			</control>


		</control>
	
		<include>Window-Files</include>
		<include>nowplayingpopup</include>
		<include>contextselected</include>
	
		<control type="label">
			<include>mediafocusvideo</include>
			<visible>[Control.IsVisible(53) | Control.IsVisible(57) | Control.IsVisible(56) | Control.IsVisible(55)] + !Window.IsActive(2004) + !Container.Content(episodes)</visible>
		</control>

		<include>Viewtype_List</include>
		<include>Viewtype_Poster</include>
	
	</control>

	<include>Viewtype_Showcase</include>
	<include>Viewtype_ShowcaseWide</include>
	<include>Viewtype_Episode</include>
	
	<include>showcaseimdb</include>
	
</controls>	
</window>
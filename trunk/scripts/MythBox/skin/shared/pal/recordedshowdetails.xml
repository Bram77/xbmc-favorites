<window>
    <id>3</id>
    <defaultgroup>main</defaultgroup>

#include vars.xml

    <show_detail_x>(data_up_x)</show_detail_x>
    <show_detail_y>(data_up_y)</show_detail_y>
    <show_detail_w>(data_w)</show_detail_w>
    <show_detail_h>(data_h)</show_detail_h>

#include showdetailvars.xml

    <controls>
#include bgctls.xml
#include titlectls.xml
        <control>
#include titleattrs.xml
            <label>47</label>
        </control>

        <!-- menu buttons -->
        <control>
            <description>Play button</description>
            <id>play</id>
            <type>button</type>
            <posX>(menu_up_x)</posX>
            <posY>(menu_up_y)+0*((menubtn_h)+(menubtn_dh))</posY>
            <offsetX>(btn_off_x)</offsetX>
            <offsetY>(btn_off_y)</offsetY>
            <alignment>(btn_align)</alignment>
            <width>(menubtn_w)</width>
            <height>(menubtn_h)</height>
            <label>48</label>
            <font>(menubtn_font)</font>
            <group>main</group>
            <default>yes</default>
            <onup>rerecord</onup>
            <ondown>playskip</ondown>
            <texturefocus>button_focus.png</texturefocus>
            <texturenofocus>button_nofocus.png</texturenofocus>
        </control>
        <control>
            <description>Play+Skip button</description>
            <id>playskip</id>
            <type>button</type>
            <posX>(menu_up_x)</posX>
            <posY>(menu_up_y)+1*((menubtn_h)+(menubtn_dh))</posY>
            <offsetX>(btn_off_x)</offsetX>
            <offsetY>(btn_off_y)</offsetY>
            <alignment>(btn_align)</alignment>
            <width>(menubtn_w)</width>
            <height>(menubtn_h)</height>
            <label>169</label>
            <font>(menubtn_font)</font>
            <group>main</group>
            <default>yes</default>
            <onup>play</onup>
            <ondown>refresh</ondown>
            <texturefocus>button_focus.png</texturefocus>
            <texturenofocus>button_nofocus.png</texturenofocus>
        </control>
        <control>
            <description>Refresh button</description>
            <id>refresh</id>
            <type>button</type>
            <posX>(menu_up_x)</posX>
            <posY>(menu_up_y)+3*((menubtn_h)+(menubtn_dh))</posY>
            <offsetX>(btn_off_x)</offsetX>
            <offsetY>(btn_off_y)</offsetY>
            <alignment>(btn_align)</alignment>
            <width>(menubtn_w)</width>
            <height>(menubtn_h)</height>
            <label>53</label>
            <font>(menubtn_font)</font>
            <group>main</group>
            <onup>playskip</onup>
            <ondown>autoexpire</ondown>
            <texturefocus>button_focus.png</texturefocus>
            <texturenofocus>button_nofocus.png</texturenofocus>
        </control>
        <control>
            <description>Autoexpire button</description>
            <id>autoexpire</id>
            <type>button</type>
            <posX>(menu_up_x)</posX>
            <posY>(menu_up_y)+4*((menubtn_h)+(menubtn_dh))</posY>
            <offsetX>(btn_off_x)</offsetX>
            <offsetY>(btn_off_y)</offsetY>
            <alignment>(btn_align)</alignment>
            <width>(menubtn_w)</width>
            <height>(menubtn_h)</height>
            <font>(menubtn_font)</font>
            <group>main</group>
            <onup>refresh</onup>
            <ondown>delete</ondown>
            <texturefocus>button_focus.png</texturefocus>
            <texturenofocus>button_nofocus.png</texturenofocus>
        </control>
        <control>
            <description>Delete button</description>
            <id>delete</id>
            <type>button</type>
            <posX>(menu_up_x)</posX>
            <posY>(menu_up_y)+7*((menubtn_h)+(menubtn_dh))</posY>
            <offsetX>(btn_off_x)</offsetX>
            <offsetY>(btn_off_y)</offsetY>
            <alignment>(btn_align)</alignment>
            <width>(menubtn_w)</width>
            <height>(menubtn_h)</height>
            <label>52</label>
            <font>(menubtn_font)</font>
            <group>main</group>
            <onup>autoexpire</onup>
            <ondown>rerecord</ondown>
            <texturefocus>button_focus.png</texturefocus>
            <texturenofocus>button_nofocus.png</texturenofocus>
        </control>
        <control>
            <description>Re-Record button</description>
            <id>rerecord</id>
            <type>button</type>
            <posX>(menu_up_x)</posX>
            <posY>(menu_up_y)+8*((menubtn_h)+(menubtn_dh))</posY>
            <offsetX>(btn_off_x)</offsetX>
            <offsetY>(btn_off_y)</offsetY>
            <alignment>(btn_align)</alignment>
            <width>(menubtn_w)</width>
            <height>(menubtn_h)</height>
            <label>168</label>
            <font>(menubtn_font)</font>
            <group>main</group>
            <onup>delete</onup>
            <ondown>play</ondown>
            <texturefocus>button_focus.png</texturefocus>
            <texturenofocus>button_nofocus.png</texturenofocus>
        </control>
        <!-- menu buttons end -->
#include showdetailctls.xml
    </controls>
</window>
